@model IEnumerable<PortalCOSIE.Domain.Entities.Carrera>
@{
    ViewData["Title"] = "Gestión de carreras";
}

<div class="card shadow">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="mb-0 fw-bold py-2">@ViewData["Title"]</h6>
            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#createModal">
                <i class="fas fa-plus me-2"></i>Crear
            </button>
        </div>
    </div>
    <div class="card-body overflow-auto p-4" style="height: calc(100vh - 164px);">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="table-responsive w-auto">
            <table id="tblCarreras" class="table table-striped table-bordered">
                <thead class="table-secondary">
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var carrera in Model)
                    {
                        <tr>
                            <td>@carrera.Id</td>
                            <td>@carrera.Nombre</td>
                            <td class="text-center">
                                <a asp-action="Editar" asp-route-id="@carrera.Nombre" class="btn btn-sm btn-outline-secondary" title="Ver unidades de aprendizaje">
                                    <i class="fas fa-list"></i>
                                </a>
                                <button type="button"
                                        class="btn btn-outline-primary btn-sm"
                                        data-bs-toggle="modal"
                                        data-bs-target="#editCarreraModal"
                                        data-carrera-id="@carrera.Id"
                                        data-carrera-name="@carrera.Nombre">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button type="button"
                                        class="btn btn-sm btn-outline-danger"
                                        title="Eliminar"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal"
                                        data-carrera-id="@carrera.Id"
                                        data-carrera-name="@carrera.Nombre">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal para crear carrera -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="createForm" asp-action="Crear" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Crear Nueva Carrera</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="carreraNombre" class="form-label fw-bold">Nombre de la Carrera</label>
                        <input type="text" class="form-control" id="carreraNombre" name="nombre" @* required *@
                               placeholder="Ingrese el nombre de la carrera" maxlength="100">
                        <div class="form-text">Máximo 100 caracteres</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Guardar carrera
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal para editar carrera CORREGIDO -->
<div class="modal fade" id="editCarreraModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="editCarreraForm" asp-action="Editar" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="editCarreraId" name="id" />
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Editar Carrera</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="editCarreraNombre" class="form-label fw-bold">Nombre de la Carrera</label>
                        <input type="text" class="form-control" id="editCarreraNombre" name="nombre" required
                               placeholder="Ingrese el nombre de la carrera" maxlength="100">
                        <div class="form-text">Máximo 100 caracteres</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Guardar cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal de eliminación -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="deleteForm" asp-action="Eliminar" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Confirmar Eliminación</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning mb-3">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Esta acción no se puede deshacer. La carrera y todos sus datos asociados serán eliminados permanentemente.
                    </div>
                    <div class="mb-3">
                        <p>¿Está seguro de eliminar la siguiente carrera?</p>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <strong>ID:</strong> <span id="modalCarreraId"></span>
                            </li>
                            <li class="list-group-item">
                                <strong>Nombre:</strong> <span id="modalCarreraName"></span>
                            </li>
                        </ul>
                    </div>
                    <input type="hidden" id="modalCarreraIdInput" name="id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i>Eliminar Carrera
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Configuración de DataTable
            $('#tblCarreras').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.3.2/i18n/es-MX.json',
                },
                paging: false,
                scrollCollapse: true,
                scrollY: '50vh'
            });

            // Manejo del modal de edición de carrera CORREGIDO
            $('#editCarreraModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var carreraId = button.data('carrera-id');
                var carreraName = button.data('carrera-name');

                var modal = $(this);
                modal.find('#editCarreraId').val(carreraId);
                modal.find('#editCarreraNombre').val(carreraName);
                modal.find('#editCarreraNombre').focus().select();
            });

            // Manejo del modal de eliminación
            $('#deleteModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var carreraId = button.data('carrera-id');
                var carreraName = button.data('carrera-name');

                var modal = $(this);
                modal.find('#modalCarreraId').text(carreraId);
                modal.find('#modalCarreraName').text(carreraName);
                modal.find('#modalCarreraIdInput').val(carreraId);
            });

            // Limpiar formulario de creación cuando se cierra el modal
            $('#createModal').on('hidden.bs.modal', function () {
                $('#createForm')[0].reset();
            });

            // Validación del formulario de creación
            $('#createForm').on('submit', function(e) {
                var nombre = $('#carreraNombre').val().trim();

                // if (!nombre) {
                //     e.preventDefault();
                //     alert('Por favor ingrese el nombre de la carrera');
                //     $('#carreraNombre').focus();
                //     return false;
                // }

                if (nombre.length > 100) {
                    e.preventDefault();
                    alert('El nombre no puede exceder los 100 caracteres');
                    $('#carreraNombre').focus();
                    return false;
                }

                return true;
            });

            // Validación del formulario de edición
            $('#editCarreraForm').on('submit', function(e) {
                var nombre = $('#editCarreraNombre').val().trim();

                if (!nombre) {
                    e.preventDefault();
                    alert('Por favor ingrese el nombre de la carrera');
                    $('#editCarreraNombre').focus();
                    return false;
                }

                if (nombre.length > 100) {
                    e.preventDefault();
                    alert('El nombre no puede exceder los 100 caracteres');
                    $('#editCarreraNombre').focus();
                    return false;
                }

                return true;
            });
        });
    </script>
}