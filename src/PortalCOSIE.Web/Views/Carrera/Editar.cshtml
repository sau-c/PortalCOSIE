@model PortalCOSIE.Domain.Entities.Carrera
@using PortalCOSIE.Domain.Enums
@{
    ViewData["Title"] = "Gestión de " + @Model.Nombre;
    var semestres = Enum.GetValues(typeof(Semestre)).Cast<Semestre>();
}

<div class="card shadow">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="mb-0 fw-bold py-2">@ViewData["Title"]</h6>
            <div>
                <button type="button" class="btn btn-outline-primary btn-sm me-2" data-bs-toggle="modal" data-bs-target="#editCarreraModal">
                    <i class="fas fa-edit me-2"></i>Editar Carrera
                </button>
                <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#createModal">
                    <i class="fas fa-plus me-2"></i>Crear Unidad
                </button>
            </div>
        </div>
    </div>
    <div class="card-body overflow-auto p-4" style="height: calc(100vh - 164px);">
        <div class="table-responsive">
            <table id="tblUnidades" class="table table-striped table-bordered">
                <thead class="table-secondary">
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Semestre</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var unidad in Model.UnidadesAprendizaje)
                    {
                        <tr>
                            <td>@unidad.Id</td>
                            <td>@unidad.Nombre</td>
                            <td>@unidad.Semestre</td>
                            <td class="text-center">
                                <button type="button"
                                        class="btn btn-sm btn-outline-primary"
                                        title="Editar"
                                        data-bs-toggle="modal"
                                        data-bs-target="#editModal"
                                        data-unidad-id="@unidad.Id"
                                        data-unidad-name="@unidad.Nombre"
                                        data-unidad-semestre="@((int)unidad.Semestre)">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button type="button"
                                        class="btn btn-sm btn-outline-danger"
                                        title="Eliminar"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal"
                                        data-unidad-id="@unidad.Id"
                                        data-unidad-name="@unidad.Nombre"
                                        data-unidad-semestre="@unidad.Semestre">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal para editar carrera -->
<div class="modal fade" id="editCarreraModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="editCarreraForm" asp-action="EditarCarrera" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Editar Carrera</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="carreraNombre" class="form-label fw-bold">Nombre de la Carrera</label>
                        <input type="text" class="form-control" id="carreraNombre" name="nombre" required
                               value="@Model.Nombre" placeholder="Ingrese el nombre de la carrera" maxlength="100">
                        <div class="form-text">Máximo 100 caracteres</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal para crear unidad -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="createForm" asp-action="CrearUnidad" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="carreraId" value="@Model.Id" />
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Crear Nueva Unidad</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="unidadNombre" class="form-label fw-bold">Nombre de la Unidad</label>
                        <input type="text" class="form-control" id="unidadNombre" name="nombre" required
                               placeholder="Ingrese el nombre de la unidad" maxlength="100">
                    </div>
                    <div class="mb-3">
                        <label for="unidadSemestre" class="form-label fw-bold">Semestre</label>
                        <select class="form-select" id="unidadSemestre" name="semestre" required>
                            <option value="">Seleccione un semestre</option>
                            @foreach (var semestre in semestres)
                            {
                                <option value="@((int)semestre)">@semestre</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Guardar Unidad
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal para editar unidad -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="editForm" asp-action="EditarUnidad" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="editUnidadId" name="id" />
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Editar Unidad de Aprendizaje</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="editUnidadNombre" class="form-label fw-bold">Nombre de la Unidad</label>
                        <input type="text" class="form-control" id="editUnidadNombre" name="nombre" required
                               placeholder="Ingrese el nombre de la unidad" maxlength="100">
                    </div>
                    <div class="mb-3">
                        <label for="editUnidadSemestre" class="form-label fw-bold">Semestre</label>
                        <select class="form-select" id="editUnidadSemestre" name="semestre" required>
                            <option value="">Seleccione un semestre</option>
                            @foreach (var semestre in semestres)
                            {
                                <option value="@((int)semestre)">@semestre</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal de eliminación -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="deleteForm" asp-action="EliminarUnidad" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Confirmar eliminación</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning mb-3">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Esta acción no se puede deshacer. La unidad y todos sus datos asociados serán eliminados permanentemente.
                    </div>
                    <div class="mb-3">
                        <p>¿Está seguro de eliminar la siguiente unidad de aprendizaje?</p>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <strong>Nombre:</strong> <span id="modalUnidadName"></span>
                            </li>
                            <li class="list-group-item">
                                <strong>Semestre:</strong> <span id="modalUnidadSemestre"></span>
                            </li>
                            <li class="list-group-item">
                                <strong>Carrera:</strong> @Model.Nombre
                            </li>
                        </ul>
                    </div>
                    <input type="hidden" id="modalUnidadIdInput" name="id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i>Eliminar Unidad
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Configuración de DataTable
            $('#tblUnidades').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.3.2/i18n/es-MX.json',
                },
                paging: false,
                scrollCollapse: true,
                scrollY: '50vh'
            });

            // Manejo del modal de edición de carrera
            $('#editCarreraModal').on('show.bs.modal', function () {
                $('#carreraNombre').focus().select();
            });

            // Manejo del modal de edición de unidad
            $('#editModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var unidadId = button.data('unidad-id');
                var unidadName = button.data('unidad-name');
                var unidadSemestre = button.data('unidad-semestre');

                var modal = $(this);
                modal.find('#editUnidadId').val(unidadId);
                modal.find('#editUnidadNombre').val(unidadName);
                modal.find('#editUnidadSemestre').val(unidadSemestre);
            });

            // Manejo del modal de eliminación
            $('#deleteModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var unidadId = button.data('unidad-id');
                var unidadName = button.data('unidad-name');
                var unidadSemestre = button.data('unidad-semestre');

                var modal = $(this);
                modal.find('#modalUnidadName').text(unidadName);
                modal.find('#modalUnidadSemestre').text(unidadSemestre);
                modal.find('#modalUnidadIdInput').val(unidadId);
            });

            // Limpiar formulario de creación cuando se cierra el modal
            $('#createModal').on('hidden.bs.modal', function () {
                $('#createForm')[0].reset();
            });

            // Validación del formulario de edición de carrera
            $('#editCarreraForm').on('submit', function(e) {
                var nombre = $('#carreraNombre').val().trim();

                if (!nombre) {
                    e.preventDefault();
                    alert('Por favor ingrese el nombre de la carrera');
                    $('#carreraNombre').focus();
                    return false;
                }

                if (nombre.length > 100) {
                    e.preventDefault();
                    alert('El nombre no puede exceder los 100 caracteres');
                    $('#carreraNombre').focus();
                    return false;
                }

                return true;
            });

            // Validación del formulario de creación de unidad
            $('#createForm').on('submit', function(e) {
                var nombre = $('#unidadNombre').val().trim();
                var semestre = $('#unidadSemestre').val();

                if (!nombre) {
                    e.preventDefault();
                    alert('Por favor ingrese el nombre de la unidad');
                    $('#unidadNombre').focus();
                    return false;
                }

                if (!semestre) {
                    e.preventDefault();
                    alert('Por favor seleccione un semestre');
                    $('#unidadSemestre').focus();
                    return false;
                }

                return true;
            });

            // Validación del formulario de edición de unidad
            $('#editForm').on('submit', function(e) {
                var nombre = $('#editUnidadNombre').val().trim();
                var semestre = $('#editUnidadSemestre').val();

                if (!nombre) {
                    e.preventDefault();
                    alert('Por favor ingrese el nombre de la unidad');
                    $('#editUnidadNombre').focus();
                    return false;
                }

                if (!semestre) {
                    e.preventDefault();
                    alert('Por favor seleccione un semestre');
                    $('#editUnidadSemestre').focus();
                    return false;
                }

                return true;
            });
        });
    </script>
}