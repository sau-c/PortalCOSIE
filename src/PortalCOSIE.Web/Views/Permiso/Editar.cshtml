
@{
    ViewData["Title"] = "Editar permiso";
}

<div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h6 class="mb-0 fw-bold py-2">
                Editar permiso@*: <span class="text-danger">@Html.DisplayFor(model => model.Controlador)</span>*@
            </h6>
        </div>
    </div>

    <div class="card-body overflow-auto p-4" style="height: calc(100vh - 164px);">

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
                <div class="col-lg-4 col-md-4">
                    @* <label asp-for="Controlador" class="control-label"></label>
                    <input asp-for="Controlador" class="form-control" />
                    <span asp-validation-for="Controlador" class="text-danger"></span> *@
                </div>
                <div class="col-lg-8">
                    @* <label asp-for="Accion" class="control-label"></label>
                    <input asp-for="Accion" class="form-control" />
                    <span asp-validation-for="Accion" class="text-danger"></span> *@
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12 text-end">
                    <a asp-action="Index" class="btn btn-secondary btn-sm shadow-sm">
                        <i class="fas fa-cancel me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary btn-sm shadow-sm">
                        <i class="fas fa-save me-2"></i>Guardar
                    </button>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
