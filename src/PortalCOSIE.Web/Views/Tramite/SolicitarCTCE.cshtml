@model PortalCOSIE.Web.Models.SolicitudCtceVM
@{
    ViewData["Title"] = "Dictamen interno (CTCE)";
}

<div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="mb-0 py-1"><i class="fas fa-file me-2"></i>@ViewData["Title"]</h6>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left me-2"></i>Volver
        </a>
    </div>

    <div class="card-body overflow-auto p-4" style="height: calc(100vh - 164px);">
        <form id="formSolicitud" asp-action="SolicitarCTCE" enctype="multipart/form-data" method="post">

            <div class="row g-4 mb-4">

                <div class="col-lg-6 d-flex flex-column">
                    <fieldset class="border rounded p-3 h-100 bg-white">
                        <legend class="float-none w-auto px-2 text-primary fs-6 fw-bold">
                            <i class="fas fa-user-edit me-2"></i>Datos generales del solicitante
                        </legend>

                        <div class="d-flex flex-column gap-3 h-100 justify-content-center">
                            <div class="form-floating w-100">
                                <textarea asp-for="Peticion" class="form-control" style="height: 120px" placeholder="Describa..." required></textarea>
                                <label asp-for="Peticion">Describa claramente su petición</label>
                            </div>

                            <div class="p-3 border rounded bg-light d-flex align-items-center">
                                <div class="form-check form-switch w-100 mb-0">
                                    <input asp-for="TieneDictamenesAnteriores" class="form-check-input" type="checkbox" role="switch">
                                    <label class="form-check-label fw-bold text-secondary ms-2" for="TieneDictamenesAnteriores">
                                        ¿Tiene dictámenes anteriores?
                                    </label>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>

                <div class="col-lg-6">
                    <fieldset class="border rounded px-3 pb-3 h-100 bg-white">
                        <legend class="float-none w-auto px-2 text-primary fs-6 fw-bold">
                            <i class="fas fa-book me-2"></i>Unidades de aprendizaje reprobadas
                        </legend>

                        <div class="d-flex justify-content-end mb-2">
                            <button id="btnAgregarFila" type="button" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-plus me-1"></i>Agregar
                            </button>
                        </div>

                        <div class="table-responsive border rounded" style="max-height: 150px; overflow-y: auto;">
                            <table class="table table-sm table-hover mb-0 small" id="tblUnidades">
                                <thead class="table-light sticky-top">
                                    <tr>
                                        <th style="width: 45%">Unidad</th>
                                        <th class="text-center">Cursado</th>
                                        <th class="text-center">Recursado</th>
                                        <th style="width: 40px"></th>
                                    </tr>
                                </thead>
                                <tbody id="tbody-unidades">
                                </tbody>
                            </table>
                        </div>

                        <div id="empty-state" class="text-center py-4 text-muted small bg-light mt-2 rounded">
                            <i class="fas fa-inbox fa-2x mb-2 text-secondary"></i><br>
                            No ha agregado materias.
                        </div>
                    </fieldset>
                </div>
            </div>

            <fieldset class="border rounded p-3 bg-white">
                <legend class="float-none w-auto px-2 text-primary fs-6 fw-bold">
                    <i class="fas fa-folder-open me-2"></i>Documentación adjunta
                    <span class="badge bg-light text-secondary border fw-normal ms-2 small" style="font-size: 0.75rem;">
                        <i class="fas fa-file-pdf text-danger me-1"></i>PDF Máx 3MB
                    </span>
                </legend>

                <div class="row g-3">
                    <div class="col-md-6 col-lg-3">
                        <div class="p-3 border rounded text-center bg-light h-100 position-relative">
                            <i class="fas fa-file-signature text-danger fa-2x mb-2 opacity-75"></i>
                            <label asp-for="CartaExposicionMotivos" class="d-block fw-bold small mb-2 text-truncate" title="Carta exposición de motivos">
                                Carta motivos
                            </label>
                            <input asp-for="CartaExposicionMotivos" type="file" class="form-control form-control-sm" accept=".pdf" required />
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-3">
                        <div class="p-3 border rounded text-center bg-light h-100 position-relative">
                            <i class="fas fa-id-card text-danger fa-2x mb-2 opacity-75"></i>
                            <label asp-for="Identificacion" class="d-block fw-bold small mb-2 text-truncate">
                                Identificación
                            </label>
                            <input asp-for="Identificacion" type="file" class="form-control form-control-sm" accept=".pdf" required />
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-3">
                        <div class="p-3 border rounded text-center bg-light h-100 position-relative">
                            <i class="fas fa-clipboard-list text-danger fa-2x mb-2 opacity-75"></i>
                            <label asp-for="BoletaGlobal" class="d-block fw-bold small mb-2 text-truncate">
                                Boleta Global
                            </label>
                            <input asp-for="BoletaGlobal" type="file" class="form-control form-control-sm" accept=".pdf" required />
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-3">
                        <div class="p-3 border rounded text-center bg-light h-100 position-relative">
                            <i class="fas fa-folder-plus text-danger fa-2x mb-2 opacity-75"></i>
                            <label asp-for="Probatorios" class="d-block fw-bold small mb-2 text-truncate">
                                Probatorios
                            </label>
                            <input asp-for="Probatorios" type="file" class="form-control form-control-sm" accept=".pdf" required />
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-3 pt-2 border-top">
                    <p class="text-muted small mb-0 fst-italic me-3">
                        <i class="fas fa-info-circle me-1"></i>
                        Que enterado bajo protesta de decir la verdad que lo asentado en esta solicitud y sus anexos son
                        verdad, y que conozco las sanciones reglamentarias a que me hago acreedor en caso de incurrir en alguna falta.
                    </p>
                    <button id="btnSubmit" type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-paper-plane me-2"></i>Enviar solicitud
                    </button>
                </div>
            </fieldset>

        </form>
    </div>
</div>

<template id="rowTemplate">
    <tr class="align-middle">
        <input type="hidden" name="UnidadesReprobadas.Index" value="{INDEX}" />
        <td>
            <select name="UnidadesReprobadas[{INDEX}].UnidadId" class="form-select form-select-sm border-0" required>
                <option value="">Seleccione...</option>
                @foreach (var item in (SelectList)ViewBag.Unidades)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
        </td>
        <td>
            <select name="UnidadesReprobadas[{INDEX}].PeriodoCursado" class="form-select form-select-sm border-0 text-center text-secondary" required>
                <option value="">- Periodo -</option>
                @foreach (var item in (SelectList)ViewBag.Periodos)
                {
                    <option value="@item.Text">@item.Text</option>
                }
            </select>
        </td>
        <td>
            <select name="UnidadesReprobadas[{INDEX}].PeriodoRecursado" class="form-select form-select-sm border-0 text-center text-secondary" required>
                <option value="">- Periodo -</option>
                @foreach (var item in (SelectList)ViewBag.Periodos)
                {
                    <option value="@item.Text">@item.Text</option>
                }
            </select>
        </td>
        <td class="text-center">
            <button type="button" class="btn btn-link text-danger p-0 btn-eliminar" title="Eliminar fila">
                <i class="fas fa-times"></i>
            </button>
        </td>
    </tr>
</template>

@section Scripts {
    <script>
        $(document).ready(function () {
            const form = document.getElementById("formSolicitud");
            const submitBtn = form.querySelector('button[type="submit"]');

            // Si tienes una función global para bloquear botones:
            // const boton = bloqueadorBoton(submitBtn);

            // Mantenemos la lógica original tuya
            form.addEventListener("submit", async (e) => {
                e.preventDefault();
                // boton.bloquear(); // Descomentar si usas tu helper
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Procesando...';

                try {
                    const url = form.getAttribute("action");
                    const formData = new FormData(form);
                    // Asumo que executeFetch y showGlobalModal son tus helpers globales
                    const data = await executeFetch(url, "POST", formData);
                    showGlobalModal("success", data.message, {
                        redirectUrl: '/Tramite',
                    });
                } catch (error) {
                    showGlobalModal("error", error.message, {
                        onClose: () => {
                            submitBtn.disabled = false;
                            submitBtn.innerHTML = '<i class="fas fa-paper-plane me-2"></i>Enviar Solicitud';
                        }
                    });
                }
            });

            // === LÓGICA DE TABLA ===
            const btnAgregar = document.getElementById("btnAgregarFila");
            const tbody = document.getElementById("tbody-unidades");
            const emptyState = document.getElementById("empty-state");
            const template = document.getElementById("rowTemplate").innerHTML;
            let rowIndex = 0;

            const toggleEmptyState = () => {
                if(tbody.children.length === 0) emptyState.style.display = 'block';
                else emptyState.style.display = 'none';
            };

            btnAgregar.addEventListener("click", function () {
                let newRowHtml = template.replaceAll("{INDEX}", rowIndex);
                tbody.insertAdjacentHTML('beforeend', newRowHtml);
                rowIndex++;
                toggleEmptyState();
            });

            tbody.addEventListener("click", function (e) {
                if (e.target.closest(".btn-eliminar")) {
                    e.target.closest("tr").remove();
                    toggleEmptyState();
                }
            });
        });
    </script>
}