@model PortalCOSIE.Domain.Entities.Tramites.TramiteCTCE
@{
    ViewData["Title"] = "Seguimiento dictamen interno (CTCE)";
    var identificacion = Model.Documentos.FirstOrDefault(d => d.TipoDocumentoId == 1);
    var boleta = Model.Documentos.FirstOrDefault(d => d.TipoDocumentoId == 2);
    var carta = Model.Documentos.FirstOrDefault(d => d.TipoDocumentoId == 3);
    var probatorio = Model.Documentos.FirstOrDefault(d => d.TipoDocumentoId == 4);

    // Helper para armar la lista y poder iterar facil
    var listaDocumentos = new[] {
        new { Titulo = "Carta motivos", Doc = carta, InputPrefix = "Carta", IconColor = "text-warning" },
        new { Titulo = "Identificación", Doc = identificacion, InputPrefix = "Identificacion", IconColor = "text-info" },
        new { Titulo = "Boleta global", Doc = boleta, InputPrefix = "Boleta", IconColor = "text-success" },
        new { Titulo = "Probatorios", Doc = probatorio, InputPrefix = "Probatorios", IconColor = "text-danger" }
    };
}

<div class="card shadow h-100">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="mb-0 py-1"><i class="fas fa-file-signature me-2"></i>@ViewData["Title"]</h6>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left me-2"></i>Volver
        </a>
    </div>

    <form asp-action="GuardarValidacion" method="post" class="h-100 d-flex flex-column">
        <input type="hidden" asp-for="Id" />

        <div class="card-body bg-light bg-opacity-25 overflow-auto p-4" style="height: calc(100vh - 164px);">

            <div class="row g-4 mb-4">

                <div class="col-lg-6">
                    <div class="card border h-100 shadow-sm">
                        <div class="card-header bg-white border-bottom fw-bold text-primary">
                            <i class="fas fa-user-graduate me-2"></i>Datos del solicitante
                            <span class="float-end badge bg-light text-secondary border fw-normal">
                                Solicitado: @Model.FechaSolicitud.ToString("dd/MMM/yyyy")
                            </span>
                        </div>
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3 text-primary d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                    <i class="fas fa-user fs-5"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold text-dark mb-0">
                                        @Model.Alumno.Nombre @Model.Alumno.ApellidoPaterno @Model.Alumno.ApellidoMaterno
                                    </h6>
                                    <span class="badge bg-primary">@Model.Alumno.NumeroBoleta</span>
                                    <small class="text-muted ms-1">@Model.Alumno.Carrera.Nombre</small>
                                </div>
                            </div>

                            <div class="row g-2 mb-3 small">
                                <div class="col-6">
                                    <div class="p-2 border rounded bg-light">
                                        <span class="d-block text-muted fw-bold" style="font-size: 0.7rem;">DICTÁMENES PREVIOS</span>
                                        @if (Model.TieneDictamenesAnteriores)
                                        {
                                            <span class="text-warning fw-bold"><i class="fas fa-exclamation-circle me-1"></i>Sí tiene</span>
                                        }
                                        else
                                        {
                                            <span class="text-success fw-bold"><i class="fas fa-check-circle me-1"></i>No tiene</span>
                                        }
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="p-2 border rounded bg-light">
                                        <span class="d-block text-muted fw-bold" style="font-size: 0.7rem;">INGRESO</span>
                                        <span class="text-dark fw-bold">@Model.Alumno.PeriodoIngreso</span>
                                    </div>
                                </div>
                            </div>

                            <label class="small fw-bold text-secondary mb-1">Petición del alumno:</label>
                            <div class="p-2 border rounded bg-light text-secondary small fst-italic" style="max-height: 80px; overflow-y: auto;">
                                "@Model.Peticion"
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card border h-100 shadow-sm">
                        <div class="card-header bg-white border-bottom fw-bold text-primary d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-book-open me-2"></i>Unidades de aprendizaje reprobadas</span>
                            <span class="badge bg-primary rounded-pill">@(Model.UnidadesReprobadas?.Count() ?? 0)</span>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive" style="max-height: 300px;">
                                <table class="table table-sm table-hover align-middle mb-0 small">
                                    <thead class="bg-light sticky-top text-secondary">
                                        <tr>
                                            <th class="ps-3 py-2">Unidad de Aprendizaje</th>
                                            <th class="text-center py-2">Cursó</th>
                                            <th class="text-center py-2">Recursó</th>
                                        </tr>
                                    </thead>
                                    <tbody class="border-top-0">
                                        @if (Model.UnidadesReprobadas != null && Model.UnidadesReprobadas.Any())
                                        {
                                            foreach (var unidad in Model.UnidadesReprobadas)
                                            {
                                                <tr>
                                                    <td class="ps-3 py-2 border-bottom">
                                                        <span class="fw-bold d-block">@(unidad.UnidadAprendizaje?.Nombre ?? "Sin nombre")</span>
                                                        <small class="text-muted">ID: @unidad.UnidadAprendizajeId</small>
                                                    </td>
                                                    <td class="text-center py-2 border-bottom">
                                                        <span class="badge bg-light text-dark border">@unidad.PeriodoCurso</span>
                                                    </td>
                                                    <td class="text-center py-2 border-bottom">
                                                        <span class="badge bg-light text-dark border">@unidad.PeriodoRecurse</span>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="3" class="text-center py-4 text-muted">
                                                    Sin materias registradas
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border shadow-sm">
                <div class="card-header bg-white pt-3 pb-2 border-bottom">
                    <h6 class="fw-bold text-primary mb-0"><i class="fas fa-tasks me-2"></i>Validación de documentos</h6>
                </div>

                <div class="card-body bg-light">
                    <div class="row g-3">
                        @foreach (var item in listaDocumentos)
                        {
                            if (item.Doc != null)
                            {
                                <div class="col-lg-3 col-md-6">
                                    <div class="card h-100 border shadow-sm">
                                        <div class="card-body p-3">
                                            <div class="d-flex justify-content-between align-items-start mb-3">
                                                <div class="d-flex align-items-center overflow-hidden">
                                                    <i class="fas fa-file-pdf fa-2x @item.IconColor me-2"></i>
                                                    <div class="text-truncate">
                                                        <h6 class="fw-bold mb-0 text-truncate" style="font-size: 0.9rem;">@item.Titulo</h6>
                                                        <small class="text-muted" style="font-size: 0.7rem;">@item.Doc.Nombre</small>
                                                    </div>
                                                </div>
                                                <a href="@Url.Action("Documento", "Tramite", new { Id = item.Doc.Id })"
                                                   target="_blank" class="btn btn-outline-primary btn-sm px-2 py-0" title="Ver archivo">
                                                    <small>Ver</small>
                                                </a>
                                            </div>

                                            <div class="bg-light p-2 rounded border">
                                                <input type="hidden" name="DocumentosValidacion[@item.Doc.Id].Id" value="@item.Doc.Id" />

                                                <div class="mb-2">
                                                    <label class="fw-bold text-secondary" style="font-size: 0.65rem;">ESTADO VALIDACIÓN</label>
                                                    <select name="DocumentosValidacion[@item.Doc.Id].Estado"
                                                            asp-items="ViewBag.EstadoDocumento"
                                                            class="form-select form-select-sm shadow-none bg-white border-secondary border-opacity-25"
                                                            style="font-size: 0.8rem;">
                                                    </select>
                                                </div>

                                                <div>
                                                    <textarea name="DocumentosValidacion[@item.Doc.Id].Observaciones"
                                                      class="form-control form-control-sm shadow-none bg-white"
                                                      rows="2"
                                                      style="font-size: 0.8rem; resize: none;"
                                                      placeholder="Observaciones..."></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>

                <div class="card-footer bg-white border-top p-3 text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save me-2"></i>Guardar revisión
                    </button>
                </div>
            </div>

        </div>
    </form>
</div>