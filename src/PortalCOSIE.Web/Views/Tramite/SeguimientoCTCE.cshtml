@model PortalCOSIE.Domain.Entities.Tramites.DetalleCTCE
@{
    ViewData["Title"] = "Seguimiento dictamen interno (CTCE)";
    var identificacion = Model.Documentos.FirstOrDefault(d => d.TipoDocumentoId == 1);
    var boleta = Model.Documentos.FirstOrDefault(d => d.TipoDocumentoId == 2);
    var carta = Model.Documentos.FirstOrDefault(d => d.TipoDocumentoId == 3);
    var probatorio = Model.Documentos.FirstOrDefault(d => d.TipoDocumentoId == 4);
}

<div class="card shadow h-100">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="mb-0 py-1"><i class="fas fa-file me-2"></i>@ViewData["Title"]</h6>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left me-2"></i>Volver
        </a>
    </div>

    <div class="card-body bg-light bg-opacity-10" style="height: calc(100vh - 164px); overflow-y: auto;">

        <div class="card border-0 shadow-sm mb-4 overflow-hidden">
            <div class="card-body p-0">
                <div class="card-header bg-white border-0 pt-3 px-4 pb-0 d-flex justify-content-between align-items-center">
                    <h6 class="fw-bold text-primary mb-0">
                        <i class="fas fa-user-graduate me-2"></i>Datos generales del solicitante
                    </h6>
                    <span class="badge bg-success rounded-pill border">
                        SOLICITADO EL @Model.FechaSolicitud.ToString("dd MMM yyyy")
                    </span>
                </div>
                <div class="row g-0">
                    <div class="col-lg-3 col-md-4 border-end p-3">
                        <small class="text-muted text-uppercase fw-bold small">Alumno</small>
                        <div class="d-flex align-items-center mt-3">
                            <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3 text-primary d-flex align-items-center justify-content-center shadow-sm">
                                <i class="fas fa-user fs-5"></i>
                            </div>
                            <div class="overflow-auto">
                                <h6 class="fw-bold text-dark text-wrap mb-1">
                                    @Model.Alumno.Nombre @Model.Alumno.ApellidoPaterno @Model.Alumno.ApellidoMaterno
                                </h6>
                                <span class="text-primary fw-bold small">@Model.Alumno.NumeroBoleta</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-4 border-end p-3">
                        <small class="text-muted text-uppercase fw-bold small">Académico</small>
                        <div class="mt-3">
                            <div class="text-dark fw-medium text-wrap" title="@Model.Alumno.Carrera.Nombre">
                                <i class="fas fa-graduation-cap text-muted me-2"></i>@Model.Alumno.Carrera.Nombre
                            </div>
                            <div class="small text-muted mt-2">
                                <span class="fw-bold text-dark">Ingreso:</span> @Model.Alumno.PeriodoIngreso
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-4 text-center p-3 border-end">
                        <small class="text-muted text-uppercase fw-bold small">Dictámenes previos</small>
                        <div class="mt-3">
                            @if (Model.TieneDictamenesAnteriores)
                            {
                                <span class="badge bg-warning text-dark py-2 px-3 shadow-sm"><i class="fas fa-exclamation-circle me-1"></i>SI TENGO</span>
                            }
                            else
                            {
                                <span class="badge bg-success text-light py-2 px-3 shadow-sm"><i class="fas fa-check-circle me-1"></i>NO TENGO</span>
                            }
                        </div>
                    </div>
                    <div class="col-lg-5 col-md-12 p-3 bg-light bg-opacity-25">
                        <small class="text-muted text-uppercase fw-bold small">Petición actual</small>
                        <div class="mt-2 small text-secondary lh-sm" style="max-height: 70px; overflow-y: auto;">
                            @Model.Peticion
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">

            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-bottom pt-3 px-4 pb-2 d-flex justify-content-between align-items-center">
                        <h6 class="fw-bold text-primary mb-0">
                            <i class="fas fa-book me-2"></i>Unidades de aprendizaje reprobadas
                        </h6>
                        @if (Model.UnidadesReprobadas != null && Model.UnidadesReprobadas.Any())
                        {
                            <span class="badge bg-light text-secondary border">
                                @Model.UnidadesReprobadas.Count() registros
                            </span>
                        }
                    </div>

                    <div class="card-body p-0">
                        <div class="table-responsive" style="height: 250px; overflow-y: auto;">
                            <table class="table table-sm table-hover align-middle mb-0">
                                <thead class="text-uppercase text-muted bg-light small">
                                    <tr class="small">
                                        <th class="ps-4 py-3 border-0 position-sticky top-0 bg-light shadow-sm" style="z-index: 2;">Unidad de Aprendizaje</th>
                                        <th class="text-center py-3 border-0 position-sticky top-0 bg-light shadow-sm" style="z-index: 2;">Cursó</th>
                                        <th class="text-center py-3 border-0 position-sticky top-0 bg-light shadow-sm" style="z-index: 2;">Recursó</th>
                                    </tr>
                                </thead>
                                <tbody class="border-top-0">
                                    @if (Model.UnidadesReprobadas != null && Model.UnidadesReprobadas.Any())
                                    {
                                        @foreach (var unidad in Model.UnidadesReprobadas)
                                        {
                                            <tr class="small">
                                                <td class="ps-4 border-bottom py-3">
                                                    <div class="fw-bold text-dark">
                                                        @(unidad.UnidadAprendizaje?.Nombre ?? "Sin nombre")
                                                    </div>
                                                    <small class="text-muted">CLAVE: @unidad.UnidadAprendizajeId</small>
                                                </td>
                                                <td class="text-center border-bottom py-3">
                                                    <span class="badge bg-white text-dark border px-3 py-2">
                                                        @unidad.PeriodoCurso
                                                    </span>
                                                </td>
                                                <td class="text-center border-bottom py-3">
                                                    <span class="badge bg-white text-dark border px-3 py-2">
                                                        @unidad.PeriodoRecurse
                                                    </span>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="3" class="text-center py-5 border-0">
                                                <div class="text-muted opacity-50">
                                                    <i class="fas fa-check-circle fs-1 mb-3"></i>
                                                    <p class="mb-0">No hay unidades reprobadas.</p>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">

                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-body p-3 d-flex justify-content-between align-items-center">
                        <h6 class="fw-bold text-primary mb-0">
                            <i class="fas fa-tasks me-2"></i>Validación de documentos
                        </h6>
                        <div>
                            <button class="btn btn-sm btn-outline-secondary me-1">Cancelar</button>
                            <button class="btn btn-sm btn-primary shadow-sm">
                                <i class="fas fa-save me-1"></i> Guardar revisión
                            </button>
                        </div>
                    </div>
                </div>

                <div style="height: 250px; overflow-y: auto; padding-right: 5px;">

                    @{
                        var listaDocumentos = new[]
                        {
                                        new {
                                        Titulo = "Carta de motivos",
                                        Doc = carta,
                                        InputPrefix = "Carta"
                                        },
                                        new {
                                        Titulo = "Identificación",
                                        Doc = identificacion,
                                        InputPrefix = "Identificacion"
                                        },
                                        new {
                                        Titulo = "Boleta global",
                                        Doc = boleta,
                                        InputPrefix = "Boleta"
                                        },
                                        new {
                                        Titulo = "Probatorios",
                                        Doc = probatorio,
                                        InputPrefix = "Probatorios"
                                        }
                                        };
                    }

                    <div class="row row-cols-1 row-cols-xl-2 g-3">

                        @foreach (var item in listaDocumentos)
                        {
                            // Solo renderizamos si el documento existe en la BD
                            if (item.Doc != null)
                            {
                                <div class="col">
                                    <div class="card h-100 border-0 shadow-sm">

                                        <div class="card-body pb-0 pt-3">
                                            <div class="d-flex justify-content-between align-items-start mb-2">

                                                <div class="d-flex align-items-center">
                                                    <div class="bg-danger bg-opacity-10 text-danger rounded p-2 me-3">
                                                        <i class="fas fa-file-pdf fs-4"></i>
                                                    </div>
                                                    <div class="overflow-hidden">
                                                        <h6 class="fw-bold text-dark mb-0 text-truncate">@item.Titulo</h6>
                                                        <small class="text-muted" style="font-size: 0.75rem;" title="@item.Doc.Nombre">
                                                            @item.Doc.Nombre
                                                        </small>
                                                    </div>
                                                </div>

                                                <a href="@Url.Action("Documento", "Tramite", new { Id = item.Doc.Id })"
                                                   target="_blank"
                                                   rel="noopener noreferrer"
                                                   class="btn btn-sm btn-outline-primary rounded-pill px-2 small">
                                                    Ver
                                                </a>
                                            </div>
                                        </div>

                                        <div class="card-footer bg-light border-0 p-3 m-2 rounded-3">

                                            <input type="hidden" name="DocumentosValidacion[@item.Doc.Id].Id" value="@item.Doc.Id" />

                                            <div class="mb-2">
                                                <label class="text-secondary fw-bold small mb-1" style="font-size: 0.65rem;">ESTADO</label>
                                                <select name="DocumentosValidacion[@item.Doc.Id].Estado"
                                                        asp-items="ViewBag.EstadoDocumento"
                                                        class="form-select form-select-sm shadow-none border-secondary border-opacity-25 bg-white">
                                                </select>
                                            </div>

                                            <textarea name="DocumentosValidacion[@item.Doc.Id].Observaciones"
                                              class="form-control form-control-sm shadow-none bg-white"
                                              rows="2"
                                              placeholder="Observaciones para el alumno..."></textarea>
                                        </div>

                                    </div>
                                </div>
                            }
                        }

                    </div>
                </div>


            </div>
        </div>
    </div>
</div>