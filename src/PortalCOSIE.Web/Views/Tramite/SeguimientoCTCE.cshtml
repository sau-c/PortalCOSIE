<div class="modal fade" id="pdfModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" style="height: 90vh;">
        <div class="modal-content h-100">
            <div class="modal-header py-2 bg-light">
                <h6 class="modal-title fw-bold text-primary" id="pdfModalLabel">
                    <i class="fas fa-file-pdf me-2"></i>Visualizando documento
                </h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0 bg-light d-flex justify-content-center align-items-center position-relative">

                <div id="pdfLoader" class="text-center position-absolute">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="mt-2 small text-muted">Cargando documento...</p>
                </div>

                <iframe id="pdfFrame" src="" class="w-100 h-100 border-0" style="display:none;"></iframe>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            // 1. Obtener referencias
            const pdfModalEl = document.getElementById('pdfModal');
            const pdfModal = new bootstrap.Modal(pdfModalEl);
            const pdfFrame = document.getElementById('pdfFrame');
            const pdfLoader = document.getElementById('pdfLoader');
            const modalTitle = document.getElementById('pdfModalLabel');

            // 2. Escuchar clics en todos los botones con clase .btn-ver-pdf
            document.querySelectorAll('.btn-ver-pdf').forEach(button => {
                button.addEventListener('click', function () {
                    const url = this.getAttribute('data-url');
                    const title = this.getAttribute('data-title');

                    // Resetear estado del modal
                    pdfFrame.style.display = 'none';
                    pdfLoader.style.display = 'block';
                    pdfFrame.src = ''; // Limpiar anterior

                    // Actualizar título
                    modalTitle.innerHTML = `<i class="fas fa-file-pdf me-2"></i>${title}`;

                    // Asignar URL al iframe
                    pdfFrame.src = url;

                    // Mostrar modal
                    pdfModal.show();

                    // Cuando el iframe carga, ocultar loader
                    pdfFrame.onload = function() {
                        pdfLoader.style.display = 'none';
                        pdfFrame.style.display = 'block';
                    };
                });
            });

            // 3. Limpiar iframe al cerrar para ahorrar memoria
            pdfModalEl.addEventListener('hidden.bs.modal', function () {
                pdfFrame.src = '';
            });
        });
    </script>
}