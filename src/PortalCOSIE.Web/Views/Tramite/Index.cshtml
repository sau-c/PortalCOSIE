@model IEnumerable<PortalCOSIE.Domain.Entities.Tramites.Tramite>
@{
    ViewData["Title"] = "Tramites";
}

<div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h6 class="mb-0 py-1"><i class="fas fa-clipboard-list me-2"></i>@ViewData["Title"]</h6>
        </div>
    </div>

    <div class="card-body overflow-auto px-4" style="height: calc(100vh - 164px);">

        <table id="tblTramites" class="table table-hover">
            <thead class="table-light table-bordered">
                <tr class="small">
                    <th>Id</th>
                    <th>Fecha solicitud</th>
                    <th>Tipo de tramite</th>
                    <th>Personal revisor</th>
                    <th>Estado</th>
                    <th>Fecha conclusion</th>
                    <th>Acción</th>
                </tr>
            </thead>

            @foreach (var tramite in Model)
            {
                <tr class="align-middle">
                    <td class="text-center small">@tramite.Id</td>
                    <td class="small">@tramite.FechaSolicitud</td>
                    <td class="small fw-bold text-secondary">@tramite.TipoTramite.Nombre</td>

                    <td>
                        @if (tramite.Personal == null)
                        {
                            <div class="text-muted fst-italic small">
                                <i class="fas fa-user-slash me-1 opacity-50"></i> Sin asignar
                            </div>
                        }
                        else
                        {
                            <div class="d-flex align-items-center">
                                <div class="bg-light text-primary rounded-circle d-flex justify-content-center align-items-center me-2 border"
                                     style="width: 32px; height: 32px;">
                                    <i class="fas fa-user-tie"></i>
                                </div>
                                <div class="lh-1">
                                    <div class="fw-bold text-dark small">@tramite.Personal.NombreCompleto()</div>
                                    <small class="text-muted" style="font-size: 0.75rem;">Revisor</small>
                                </div>
                            </div>
                        }
                    </td>

                    <td class="text-center">
                        <span class="badge rounded-pill shadow-sm px-3 py-2 border border-light @tramite.EstadoTramite.ToBadgeClass()">
                            <i class="@tramite.EstadoTramite.ToIconClass() me-2"></i>
                            @tramite.EstadoTramite.Nombre
                        </span>
                    </td>

                    <td class="small text-center">
                        @if (tramite.FechaConclusion != null)
                        {
                            @tramite.FechaConclusion
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="Editar" asp-route-id="@tramite.Id" class="btn btn-sm btn-outline-primary border-0 rounded-circle" title="Ver detalles">
                            <i class="fas fa-eye"></i>
                        </a>
                    </td>
                </tr>
            }
        </table>

    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tblTramites').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.3.2/i18n/es-MX.json',
                },
                paging: false,
                scrollCollapse: true, //Si hay poco contenido -> no scrollY
                scrollY: 'calc(100vh - 370px)',
                orderCellsTop: true,
                fixedHeader: true,

                columnDefs:
                [
                    { targets: 0, width: "1%" },
                    { targets: 1, width: "15%" },
                    { targets: 1, width: "20%" },
                    { targets: 3, width: "20%" },
                    { targets: 4, width: "12%", className: "text-center" },
                    { targets: 5, width: "15%", },
                    { targets: 6, width: "1%", className: "text-center", orderable: false }
                ]
            });
        });
    </script>
}