@model IEnumerable<PortalCOSIE.Domain.Entities.Calendario.SesionCOSIE>
@{
    ViewData["Title"] = "Calendario de sesiones COSIE CTCE";
    var puedeEditar = User.IsInRole("Administrador") || User.IsInRole("Personal");
}

<div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="mb-0 py-1">
            <i class="fas fa-calendar-alt me-2"></i>@ViewData["Title"]
        </h6>
        @if (puedeEditar)
        {
            <button type="button"
                    class="btn btn-sm btn-primary btn-crear"
                    data-bs-toggle="modal"
                    data-bs-target="#modalSesion"
                    data-mode="crear">
                <i class="fas fa-plus me-1"></i>Crear sesión
            </button>
        }
    </div>

    <div class="card-body p-4 overflow-auto" style="height: calc(100vh - 164px);">
        @if (!(User.IsInRole("Alumno") || User.IsInRole("Administrador") || User.IsInRole("Personal")))
        {
            <div class="alert alert-danger shadow-sm border-0 d-flex align-items-center p-3">
                <i class="fas fa-user-slash fs-4 me-3"></i>
                <div>
                    <h6 class="mb-1 fw-bold">Usuario inactivo</h6>
                    <p class="mb-0 small">
                        Tu cuenta no tiene un rol asignado.
                        Acude a gestión escolar con tu credencial para activarla.
                    </p>
                </div>
            </div>
        }
        <p class="text-secondary">Consulta las fechas de recepción y sesión correspondientes a cada periodo.</p>
        <table id="tblSesiones" class="table table-hover table-bordered">
            <thead class="table-secondary">
                <tr class="small">
                    <th>No. de Sesión</th>
                    <th>Recepción documental</th>
                    <th>Fecha de sesión</th>
                    @if (puedeEditar)
                    {
                        <th>Acción</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var sesion in Model)
                {
                    <tr class="small" style="@(sesion.IsDeleted ? "background-color: #ffd4d4" : "")">
                        <td class="fw-semibold">@sesion.NumeroSesion</td>
                        <td>
                            @if (sesion.FechasRecepcion?.Any() == true)
                            {
                                @foreach (var fecha in sesion.FechasRecepcion)
                                {
                                    <span class="badge p-2 bg-warning text-black me-1">@fecha.Fecha.ToString("dd/MM/yyyy")</span>
                                }
                            }
                            else
                            {
                                <span class="badge p-2 bg-secondary">No definida</span>
                            }
                        </td>
                        <td class="fw-semibold text-center">
                            @if (sesion.FechaSesion.HasValue)
                            {
                                @sesion.FechaSesion?.ToString("dd/MM/yyyy")
                            }
                            else
                            {
                                <span class="badge p-2 bg-secondary">No definida</span>
                            }
                        </td>
                        @if (puedeEditar)
                        {
                            <td class="text-center">
                                <button type="button"
                                        class="btn btn-sm btn-outline-primary btn-editar"
                                        title="Editar"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modalSesion"
                                        data-mode="editar"
                                        data-id="@sesion.Id"
                                        data-numero-sesion="@sesion.NumeroSesion"
                                        data-fecha-sesion="@sesion.FechaSesion?.ToString("yyyy-MM-dd")"
                                        data-fechas-recepcion='@Json.Serialize(sesion.FechasRecepcion?.Select(f => f.Fecha.ToString("yyyy-MM-dd")).ToList())'>
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button type="button"
                                        class="btn btn-sm @(sesion.IsDeleted ? "btn-outline-success" : "btn-outline-danger") btn-toggle-estado"
                                        title="@(sesion.IsDeleted ? "Activar sesión" : "Desactivar sesión")"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modalToggle"
                                        data-id="@sesion.Id"
                                        data-numero-sesion="@sesion.NumeroSesion"
                                        data-isdeleted="@sesion.IsDeleted">
                                    <i class="fas @(sesion.IsDeleted ? "fa-eye" : "fa-eye-slash")"></i>
                                </button>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (puedeEditar)
{
    <!-- Modal Crear/Editar -->
    <partial name="_ModalSesion" />
    <!-- Modal Desactivar -->
    <partial name="_ModalToggle" />
}

@section Scripts {
    <script>
        $(function () {
            // Configuración base de DataTable
            var config = {
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.3.2/i18n/es-MX.json'
                },
                searching: false,
                paging: false,
                scrollCollapse: true,
                scrollY: '50vh',
                columnDefs: [
                    { targets: 0, width: "11%" },
                    { targets: 2, width: "13%", className: "text-center" }
                ]
            };

            // Agregar configuración para columna de acciones si puede editar
            @if (puedeEditar)
            {
                @:config.columnDefs.push({ targets: 3, width: "95px", className: "text-center", orderable: false });
                // Inicializar modales
                @:inicializarModalSesion();
                @:inicializarModalToggle();
            }

            $('#tblSesiones').DataTable(config);
        });
    </script>
}