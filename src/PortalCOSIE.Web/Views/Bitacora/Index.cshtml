@{
    ViewData["Title"] = "Bitácora del portal";
}

<div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h6 class="mb-0 py-1"><i class="fas fa-clipboard-list me-2"></i>@ViewData["Title"]</h6>
        </div>
    </div>

    <div class="card-body overflow-auto p-4" style="height: calc(100vh - 164px);">

        <table id="tblBitacora" class="table table-hover table-bordered">
            <thead class="table-secondary">
                <tr class="small">
                    <th>Id</th>
                    <th>IdEntidad</th>
                    <th>Tabla</th>
                    <th>Acción</th>
                    <th>Usuario</th>
                    <th>Fecha</th>
                </tr>
            </thead>
            <tbody>
            
                @* ForEach *@
            
            </tbody>
        </table>
    </div>
</div>
