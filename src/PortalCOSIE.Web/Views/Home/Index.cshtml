@{
    ViewData["Title"] = "Calendario sesiones COSIE CTE";
}

<div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h6 class="mb-0 fw-bold py-2">@ViewData["Title"]</h6>
        </div>
    </div>

    <div class="card-body p-4 overflow-auto" style="height: calc(100vh - 164px);">

        <p class="text-secondary">Consulta las fechas de recepción y sesión correspondientes a cada periodo.</p>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-secondary">
                    <tr class="small">
                        <th scope="col">Sesión</th>
                        <th scope="col">Recepción documental</th>
                        <th scope="col">Fecha de sesión</th>
                        <th scope="col" class="text-end">Acción</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="small">
                        <td class="fw-semibold text-dark">1RA</td>
                        <td>
                            <span class="badge bg-light text-dark border me-1">26 Sep 2025</span>
                            <span class="badge bg-light text-dark border me-1">29 Sep 2025</span>
                            <span class="badge bg-light text-dark border">30 Sep 2025</span>
                        </td>
                        <td class="fw-semibold text-dark">7 Oct 2025</td>
                        <td class="text-end">
                            <button class="btn btn-outline-primary btn-sm">
                                <i class="fa-regular fa-eye me-1"></i> Ver
                            </button>
                        </td>
                    </tr>
                    <tr class="small">
                        <td class="fw-semibold text-dark">2DA</td>
                        <td>
                            <span class="badge bg-light text-dark border me-1">25 Nov 2025</span>
                            <span class="badge bg-light text-dark border">26 Nov 2025</span>
                        </td>
                        <td class="fw-semibold text-dark">2 Dic 2025</td>
                        <td class="text-end">
                            <button class="btn btn-outline-primary btn-sm">
                                <i class="fa-regular fa-eye me-1"></i> Ver
                            </button>
                        </td>
                    </tr>
                    <tr class="small">
                        <td class="fw-semibold text-dark">3RA</td>
                        <td>
                            <span class="badge bg-light text-dark border me-1">10 Feb 2026</span>
                            <span class="badge bg-light text-dark border me-1">11 Feb 2026</span>
                            <span class="badge bg-light text-dark border">12 Feb 2026</span>
                        </td>
                        <td class="fw-semibold text-dark">19 Feb 2026</td>
                        <td class="text-end">
                            <button class="btn btn-outline-primary btn-sm">
                                <i class="fa-regular fa-eye me-1"></i> Ver
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
</div>