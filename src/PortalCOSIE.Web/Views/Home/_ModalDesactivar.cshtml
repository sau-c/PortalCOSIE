<div class="modal fade" id="desactivarModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Desactivar sesión</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <form asp-action="DesactivarSesion" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="desactivarId" name="id" />

                <div class="modal-body text-center">
                    <i class="fas fa-exclamation-triangle text-warning fa-3x mb-3"></i>
                    <h6 class="fw-bold">¿Está seguro que desea desactivar esta sesión?</h6>
                    <p class="text-muted mb-0">Sesión: <span id="desactivarNumeroSesion" class="fw-semibold"></span></p>
                    <p class="text-muted">Esta acción no se puede deshacer.</p>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-eye-slash me-1"></i>Desactivar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // JavaScript específico para el modal de desactivar
    document.addEventListener('DOMContentLoaded', function() {
        $(document).on('click', '.btn-desactivar', function() {
            $('#desactivarId').val($(this).data('id'));
            $('#desactivarNumeroSesion').text($(this).data('numero-sesion'));
        });
    });
</script>