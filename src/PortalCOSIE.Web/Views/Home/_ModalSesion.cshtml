<div class="modal fade" id="sesionModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="sesionModalLabel">
                    <span id="modalTitle"></span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <form id="formSesion" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="sesionId" name="id" />

                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="numeroSesion" class="form-label fw-semibold">No. de sesión</label>
                            <input type="text" class="form-control" id="numeroSesion" name="NumeroSesion" required>
                        </div>

                        <div class="col-lg-6 col-md-6">
                            <label for="fechaSesion" class="form-label fw-semibold">Fecha de sesión</label>
                            <input type="date" class="form-control" id="fechaSesion" name="FechaSesion" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Fechas de recepción documental</label>
                        <div id="fechasRecepcionContainer"></div>
                        <button type="button" class="btn btn-sm btn-outline-success mt-2" id="btnAgregarFecha">
                            <i class="fas fa-plus me-1"></i>Agregar fecha
                        </button>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary" id="btnSubmit">
                        <i class="fas fa-save me-1"></i>
                        <span id="btnSubmitText">Guardar</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Eventos para abrir modal de crear/editar
        $(document).on('click', '.btn-crear, .btn-editar', function() {
            const mode = $(this).data('mode');
            const id = $(this).data('id');
            const numero = $(this).data('numero-sesion');
            const fecha = $(this).data('fecha-sesion');
            const fechasRecepcion = $(this).data('fechas-recepcion');

            $('#fechasRecepcionContainer').empty();

            if (mode === 'crear') {
                $('#modalTitle').text('Crear nueva sesión');
                $('#btnSubmitText').text('Crear');
                $('#formSesion').attr('action', '@Url.Action("CrearSesionCOSIE", "Home")');
                $('#sesionId, #numeroSesion, #fechaSesion').val('');
                // NO agregar campo vacío por defecto - el usuario decide si agregar fechas
            } else {
                $('#modalTitle').text('Editar sesión');
                $('#btnSubmitText').text('Guardar');
                $('#formSesion').attr('action', '@Url.Action("EditarSesionCOSIE", "Home")');
                $('#sesionId').val(id);
                $('#numeroSesion').val(numero);
                $('#fechaSesion').val(fecha);

                // Cargar fechas desde el data attribute - SOLO si existen
                if (fechasRecepcion && fechasRecepcion.length > 0) {
                    fechasRecepcion.forEach(fecha => {
                        const fechaFormateada = formatearFechaParaInput(fecha);
                        // Solo agregar si la fecha no está vacía
                        if (fechaFormateada) {
                            agregarCampoFecha(fechaFormateada);
                        }
                    });
                }
                // NO agregar campo vacío si no hay fechas - el contenedor queda vacío
            }
        });

        // Agregar fecha de recepción
        $('#btnAgregarFecha').on('click', function() {
            agregarCampoFecha('');
        });

        // Remover fecha de recepción - PERMITE eliminar TODAS
        $(document).on('click', '.btn-remover-fecha', function() {
            $(this).closest('.fecha-recepcion-item').remove();
            // Ya no hay restricción - se pueden eliminar todas las fechas
        });

        function agregarCampoFecha(valor) {
            // Solo agregar si el valor no está vacío o es un string vacío
            if (valor || valor === '') {
                $('#fechasRecepcionContainer').append(`
                    <div class="input-group mb-2 fecha-recepcion-item">
                        <input type="date" class="form-control" name="fechasRecepcion" value="${valor}">
                        <button type="button" class="btn btn-outline-danger btn-remover-fecha">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>`);
            }
        }

        function formatearFechaParaInput(fechaString) {
            if (!fechaString) return null; // Retorna null en lugar de string vacío

            // Si ya está en formato YYYY-MM-DD, retornar directamente
            if (fechaString.match(/^\d{4}-\d{2}-\d{2}$/)) {
                return fechaString;
            }

            // Convertir de otros formatos a YYYY-MM-DD
            const fecha = new Date(fechaString);
            if (isNaN(fecha.getTime())) return null; // Retorna null si no es fecha válida

            return fecha.toISOString().split('T')[0];
        }

        // Validación opcional del formulario - permitir enviar sin fechas
        $('#formSesion').on('submit', function(e) {
            const fechas = $('input[name="fechasRecepcion"]').filter(function() {
                return $(this).val() !== ''; // Solo contar fechas con valor
            });

            return true;
        });
    });
</script>