<div class="modal fade" id="sesionModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="sesionModalLabel">
                    <span id="modalTitle"></span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <form id="formSesion" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="sesionId" name="Id" />

                <div class="modal-body">
                    <div class="mb-3">
                        <label for="numeroSesion" class="form-label fw-semibold">Número de sesión</label>
                        <input type="text" class="form-control" id="numeroSesion" name="NumeroSesion" required>
                    </div>

                    <div class="mb-3">
                        <label for="fechaSesion" class="form-label fw-semibold">Fecha de sesión</label>
                        <input type="date" class="form-control" id="fechaSesion" name="FechaSesion" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Fechas de recepción documental</label>
                        <div id="fechasRecepcionContainer"></div>
                        <button type="button" class="btn btn-sm btn-outline-success mt-2" id="btnAgregarFecha">
                            <i class="fas fa-plus me-1"></i>Agregar fecha
                        </button>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary" id="btnSubmit">
                        <i class="fas fa-save me-1"></i>
                        <span id="btnSubmitText">Guardar</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // JavaScript específico para el modal de sesión
    document.addEventListener('DOMContentLoaded', function() {
        // Eventos para abrir modal de crear/editar
        $(document).on('click', '.btn-crear, .btn-editar', function() {
            const mode = $(this).data('mode');
            const id = $(this).data('id');
            const numero = $(this).data('numero-sesion');
            const fecha = $(this).data('fecha-sesion');

            $('#fechasRecepcionContainer').empty();

            if (mode === 'crear') {
                $('#modalTitle').text('Crear nueva sesión');
                $('#btnSubmitText').text('Crear');
                $('#formSesion').attr('action', '@Url.Action("CrearSesion", "Sesion")');
                $('#sesionId, #numeroSesion, #fechaSesion').val('');
            } else {
                $('#modalTitle').text('Editar sesión');
                $('#btnSubmitText').text('Guardar');
                $('#formSesion').attr('action', '@Url.Action("EditarSesion", "Sesion")');
                $('#sesionId').val(id);
                $('#numeroSesion').val(numero);
                $('#fechaSesion').val(fecha);
                cargarFechasRecepcion(id);
            }
        });

        // Agregar fecha de recepción
        $('#btnAgregarFecha').on('click', function() {
            agregarCampoFecha('');
        });

        // Remover fecha de recepción
        $(document).on('click', '.btn-remover-fecha', function() {
            $(this).closest('.fecha-recepcion-item').remove();
        });

        function cargarFechasRecepcion(id) {
            $.get('@Url.Action("ObtenerFechasRecepcion", "Sesion")', { id }, function(fechas) {
                $('#fechasRecepcionContainer').empty();
                fechas.forEach(f => agregarCampoFecha(f));
            });
        }

        function agregarCampoFecha(valor) {
            $('#fechasRecepcionContainer').append(`
                <div class="input-group mb-2 fecha-recepcion-item">
                    <input type="date" class="form-control" name="FechasRecepcion[]" value="${valor}" required>
                    <button type="button" class="btn btn-outline-danger btn-remover-fecha">
                        <i class="fas fa-times"></i>
                    </button>
                </div>`);
        }
    });
</script>