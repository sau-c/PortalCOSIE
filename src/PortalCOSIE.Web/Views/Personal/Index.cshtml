@model IEnumerable<PortalCOSIE.Application.DTO.Usuario.PersonalCompletoDTO>
@{
    ViewData["Title"] = "Gestión de personal";
}
<style>
    .editable-cell {
        cursor: pointer;
    }

    .editable-email:hover {
        color: #0d6efd;
    }

    .toggle-role-btn:hover .badge {
        transform: scale(1.05);
        transition: transform 0.2s ease;
    }

    .toggle-role-btn:focus {
        outline: none;
        box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.25);
        border-radius: 4px;
    }

    .badge-role {
        transition: all 0.2s;
    }
</style>

<div class="card shadow">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="mb-0 py-1">@ViewData["Title"]</h6>
            <a asp-action="Crear" class="btn btn-primary btn-sm">
                <i class="fas fa-plus me-2"></i>Crear
            </a>
        </div>
    </div>
    <div class="card-body overflow-auto p-4" style="height: calc(100vh - 164px);">
        <div class="table-responsive">
            <table id="tblPersonal" class="table table-hover table-bordered">
                <thead class="table-secondary">
                    <tr class="small">
                        <th>Nombre</th>
                        <th>Apellido paterno</th>
                        <th>Apellido materno</th>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var personal in Model)
                    {
                        <tr class="small">
                            <td>@personal.Nombre</td>
                            <td>@personal.ApellidoPaterno</td>
                            <td>@personal.ApellidoMaterno</td>
                            <td class="editable-cell editable-email"
                                title="Editar"
                                data-bs-toggle="modal"
                                data-bs-target="#editEmailModal"
                                data-user-id="@personal.IdentityUserId"
                                data-user-email="@personal.Correo">
                                @personal.Correo
                            </td>
                            <td class="text-center">
                                <button type="button"
                                        class="btn btn-link p-0 border-0 bg-transparent toggle-role-btn"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modalToggle"
                                        data-user-id="@personal.IdentityUserId"
                                        data-current-role="@(personal.Rol ?? "Inactivo")"
                                        data-role-type="Personal"
                                        title="Cambiar estado">
                                    <span class="badge @(string.IsNullOrEmpty(personal.Rol) ? "bg-danger" : "bg-success") badge-role">
                                        @(string.IsNullOrEmpty(personal.Rol) ? "Inactivo" : personal.Rol)
                                    </span>
                                </button>
                            </td>
                            <td>
                                <a asp-action="Editar" asp-route-id="@personal.IdentityUserId" class="btn btn-sm btn-outline-primary" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button type="button"
                                        class="btn btn-sm btn-outline-danger"
                                        title="Desactivar"
                                        data-bs-toggle="modal"
                                        data-bs-target="#desactivarModal"
                                        data-user-id="@personal.IdentityUserId"
                                        data-user-name="@personal.Nombre @personal.ApellidoPaterno @personal.ApellidoMaterno"
                                        data-user-email="@personal.Correo" >
                                    <i class="fas fa-eye-slash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal de eliminación -->
<div class="modal fade" id="desactivarModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="deleteForm" asp-action="Eliminar" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Desactivar</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" ></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning mb-3">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Esta acción no se puede deshacer. Todos los datos asociados al usuario serán eliminados permanentemente.
                    </div>
                    <div class="mb-3">
                        <p>¿Está seguro de eliminar el siguiente personal?</p>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <strong>Nombre:</strong> <span id="modalUserName"></span>
                            </li>
                            <li class="list-group-item">
                                <strong>Correo:</strong> <span id="modalUserEmail"></span>
                            </li>
                        </ul>
                    </div>
                    <input type="hidden" id="modalUserId" name="id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-eye-slash me-2"></i>Desactivar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal para editar correo -->
<div class="modal fade" id="editEmailModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="editEmailForm" asp-action="VerificarCorreo" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Actualizar correo electrónico</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" ></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="emailInput" class="form-label">Nuevo correo electrónico</label>
                        <input type="email" class="form-control" id="emailInput" name="email" required>
                        <div class="form-text">El usuario recibirá un correo para confirmar el cambio</div>
                    </div>
                    <input type="hidden" id="emailUserId" name="userId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal para Toggle de Rol (NUEVO) -->
<div class="modal fade" id="modalToggle" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="toggleRoleForm" asp-action="ActualizarRol" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header" id="modalHeader">
                    <h5 class="modal-title">
                        <i id="modalIcon" class="me-2"></i>
                        <span id="modalTitle">Cambiar Estado</span>
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center mb-3">
                        <div id="modalMessage" class="alert" role="alert"></div>
                    </div>
                    <input type="hidden" id="userId" name="userId" />
                    <input type="hidden" id="rol" name="rol" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" id="confirmButton" class="btn">
                        <i class="fas fa-check me-2"></i>Confirmar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Configuración de DataTable
            $('#tblPersonal').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.3.2/i18n/es-MX.json',
                },
                paging: false,
                scrollCollapse: true,
                scrollY: '50vh',
                columnDefs:
                [
                    {
                        targets: 4,
                        width: "1%"
                    },
                    {
                        targets: 5,
                        width: "95px",
                        className: "text-center",
                        orderable: false
                    }
                ]
            });

            // Manejo del modal de eliminación
            $('#deleteModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var modal = $(this);
                modal.find('#modalUserId').val(button.data('user-id'));
                modal.find('#modalUserName').text(button.data('user-name'));
                modal.find('#modalUserEmail').text(button.data('user-email'));
            });

            // Manejo del modal de edición de correo
            $('#editEmailModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var modal = $(this);
                modal.find('#emailUserId').val(button.data('user-id'));
                modal.find('#emailInput').val(button.data('user-email'));
            });

            // Validación del formulario de correo
            $('#editEmailForm').on('submit', function() {
                var email = $('#emailInput').val();
                if (!email) {
                    alert('Por favor ingrese un correo electrónico válido');
                    return false;
                }
                return true;
            });

            // ========== NUEVO: Modal para Toggle de Rol ==========
            $('#modalToggle').on('show.bs.modal', function (event) {
                const button = $(event.relatedTarget);
                const userId = button.data('user-id');
                const currentRole = button.data('current-role');
                const roleType = button.data('role-type'); // "Personal"

                // Configurar campos ocultos
                $('#userId').val(userId);
                $('#rol').val(roleType);

                // Configurar contenido del modal según el estado actual
                const isActive = currentRole !== 'Inactivo';

                if (isActive) {
                    // Usuario está activo, se va a desactivar
                    $('#modalHeader').removeClass('bg-success').addClass('bg-warning text-dark');
                    $('#modalIcon').removeClass().addClass('fas fa-user-slash');
                    $('#modalTitle').text('Desactivar usuario');
                    $('#modalMessage')
                        .removeClass('alert-success')
                        .addClass('alert-warning')
                        .html(`<strong>¿Desactivar usuario?</strong><br>
                               El usuario perderá el rol de "<strong>${roleType}</strong>" y su acceso al sistema será revocado.`);
                    $('#confirmButton')
                        .removeClass('btn-success')
                        .addClass('btn-warning')
                        .html('<i class="fas fa-user-slash me-2"></i>Desactivar');
                } else {
                    // Usuario está inactivo, se va a activar
                    $('#modalHeader').removeClass('bg-warning text-dark').addClass('bg-success text-white');
                    $('#modalIcon').removeClass().addClass('fas fa-user-check');
                    $('#modalTitle').text('Activar usuario');
                    $('#modalMessage')
                        .removeClass('alert-warning')
                        .addClass('alert-success')
                        .html(`<strong>¿Activar usuario?</strong><br>
                               El usuario obtendrá el rol de "<strong>${roleType}</strong>" y tendrá acceso al sistema.`);
                    $('#confirmButton')
                        .removeClass('btn-warning')
                        .addClass('btn-success')
                        .html('<i class="fas fa-user-check me-2"></i>Activar');
                }
            });
        });
    </script>
}