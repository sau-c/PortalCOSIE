@model IEnumerable<PortalCOSIE.Application.DTO.Usuario.PersonalCompletoDTO>
@{
    ViewData["Title"] = "Gestión de personal";
}
<div class="card shadow">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="mb-0 py-1">@ViewData["Title"]</h6>
            <button class="btn btn-primary btn-sm"
                    data-bs-toggle="modal"
                    data-bs-target="#modalPersonal"
                    data-mode="create">
                <i class="fas fa-plus me-2"></i>Crear
            </button>
        </div>
    </div>
    <div class="card-body overflow-auto p-4" style="height: calc(100vh - 164px);">
        <div class="table-responsive">
            <table id="tblPersonal" class="table table-hover">
                <thead class="table-light table-bordered">
                    <tr class="small">
                        <th>Nombre</th>
                        <th>Apellido paterno</th>
                        <th>Apellido materno</th>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var personal in Model)
                    {
                        <tr class="@(personal.Rol == null ? "table-danger text-muted opacity-75" : "") small">
                            <td>@personal.Nombre</td>
                            <td>@personal.ApellidoPaterno</td>
                            <td>@personal.ApellidoMaterno</td>
                            <td class="editable-cell"
                                title="Editar"
                                data-bs-toggle="modal"
                                data-bs-target="#modalCorreo"
                                data-id="@personal.IdentityUserId"
                                data-correo="@personal.Correo">
                                @personal.Correo
                            </td>
                            <td class="text-center">
                                <button type="button"
                                        class="btn btn-link p-0 border-0 bg-transparent toggle-role-btn"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modalToggle"
                                        data-user-id="@personal.IdentityUserId"
                                        data-current-role="@(personal.Rol ?? "Inactivo")"
                                        data-role-type="Personal"
                                        title="Editar">
                                    <span class="badge @(string.IsNullOrEmpty(personal.Rol) ? "bg-danger" : "bg-success") badge-role">
                                        @(string.IsNullOrEmpty(personal.Rol) ? "Inactivo" : personal.Rol)
                                    </span>
                                </button>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modalPersonal"
                                        data-mode="edit"
                                        data-userid="@personal.IdentityUserId"
                                        data-nombre="@personal.Nombre"
                                        data-apellidopaterno="@personal.ApellidoPaterno"
                                        data-apellidomaterno="@personal.ApellidoMaterno"
                                        title="Editar">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal para editar datos -->
<partial name="_ModalPersonal" />
<!-- Modal para editar correo -->
<partial name="_ModalCorreo" />
<!-- Modal para Toggle de Rol -->
<partial name="_ModalToggle" />

@section Scripts {
    <script>
        $(document).ready(function () {
            // Configuración de DataTable
            $('#tblPersonal').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.3.2/i18n/es-MX.json',
                },
                paging: false,
                scrollCollapse: true,
                scrollY: 'calc(100vh - 370px)',
                columnDefs:
                [
                    {
                        targets: 4,
                        width: "1%"
                    },
                    {
                        targets: 5,
                        width: "95px",
                        className: "text-center",
                        orderable: false
                    }
                ]
            });

            // Manejo del modal de eliminación
            $('#deleteModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var modal = $(this);
                modal.find('#modalUserId').val(button.data('user-id'));
                modal.find('#modalUserName').text(button.data('user-name'));
                modal.find('#modalUserEmail').text(button.data('user-email'));
            });

            // Manejo del modal de edición de correo
            $('#editEmailModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var modal = $(this);
                modal.find('#emailUserId').val(button.data('user-id'));
                modal.find('#emailInput').val(button.data('user-email'));
            });

            // Validación del formulario de correo
            $('#editEmailForm').on('submit', function() {
                var email = $('#emailInput').val();
                if (!email) {
                    alert('Por favor ingrese un correo electrónico válido');
                    return false;
                }
                return true;
            });

            // ========== NUEVO: Modal para Toggle de Rol ==========
            $('#modalToggle').on('show.bs.modal', function (event) {
                const button = $(event.relatedTarget);
                const userId = button.data('user-id');
                const currentRole = button.data('current-role');
                const roleType = button.data('role-type'); // "Personal"

                // Configurar campos ocultos
                $('#userId').val(userId);
                $('#rol').val(roleType);

                // Configurar contenido del modal según el estado actual
                const isActive = currentRole !== 'Inactivo';

                if (isActive) {
                    // Usuario está activo, se va a desactivar
                    $('#modalHeader').removeClass('bg-success').addClass('bg-warning text-dark');
                    $('#modalIcon').removeClass().addClass('fas fa-user-slash');
                    $('#modalTitle').text('Desactivar usuario');
                    $('#modalMessage')
                        .removeClass('alert-success')
                        .addClass('alert-warning')
                        .html(`<strong>¿Desactivar usuario?</strong><br>
                               El usuario perderá el rol de "<strong>${roleType}</strong>" y su acceso al sistema será revocado.`);
                    $('#confirmButton')
                        .removeClass('btn-success')
                        .addClass('btn-warning')
                        .html('<i class="fas fa-user-slash me-2"></i>Desactivar');
                } else {
                    // Usuario está inactivo, se va a activar
                    $('#modalHeader').removeClass('bg-warning text-dark').addClass('bg-success text-white');
                    $('#modalIcon').removeClass().addClass('fas fa-user-check');
                    $('#modalTitle').text('Activar usuario');
                    $('#modalMessage')
                        .removeClass('alert-warning')
                        .addClass('alert-success')
                        .html(`<strong>¿Activar usuario?</strong><br>
                               El usuario obtendrá el rol de "<strong>${roleType}</strong>" y tendrá acceso al sistema.`);
                    $('#confirmButton')
                        .removeClass('btn-warning')
                        .addClass('btn-success')
                        .html('<i class="fas fa-user-check me-2"></i>Activar');
                }
            });
        });
    </script>
}