@{
    ViewData["Title"] = "Crear rol";
}

<div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h6 class="mb-0 fw-bold py-2">@ViewData["Title"]</h6>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Volver
            </a>
        </div>
    </div>

    <div class="card-body p-4 overflow-auto" style="max-height: calc(100vh - 164px);">
        <form asp-action="Crear" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row mb-3">
                <div class="col-md-4">
                    @* <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control form-control-sm" />
                    <span asp-validation-for="Nombre" class="text-danger small"></span> *@
                </div>
                <div class="col-md-4">
                    @* <label asp-for="Descripcion" class="form-label"></label>
                    <input asp-for="Descripcion" class="form-control form-control-sm" />
                    <span asp-validation-for="Descripcion" class="text-danger small"></span> *@
                </div>
            </div>

            <div class="mb-4">
                <h6 class="fw-bold">Asignar permisos</h6>
                @* <hr> *@
                <div class="table-responsive">
                    <table id="tblPermisos" class="table table-bordered table-hover align-middle text-center">
                        <thead class="table-light">
                            <tr>
                                <th>Vista</th>
                                <th width="15%">Ver</th>
                                <th width="15%">Crear</th>
                                <th width="15%">Editar</th>
                                <th width="15%">Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var vista in new[] { "Rol", "Rol", "Rol", "Rol", "Rol", "Permiso", "Usuario", "Seguimiento de tramite", "Estado" })
                            {
                                <tr>
                                    <td class="text-start fw-medium">@vista</td>
                                    <td><input type="checkbox" value="true" /></td>
                                    <td><input type="checkbox" value="true" /></td>
                                    <td><input type="checkbox" value="true" /></td>
                                    <td><input type="checkbox" value="true" /></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-primary shadow-sm">
                    <i class="fas fa-save me-2"></i>Guardar
                </button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#tblPermisos').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.3.2/i18n/es-MX.json',
                },
                paging: false,
                ordering: false,
                searching: false
                // info: false,
                //scrollX: true //Scroll dinamico
                // scrollY: '20vh' //Scroll dinamico
            });
        });
    </script>
}