@model IEnumerable<PortalCOSIE.Domain.Entities.EstadoTramite>

<div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
    <table id="tblEstados" class="table table-hover table-bordered">
        <thead class="table-secondary">
            <tr class="small">
                <th>Id</th>
                <th>Nombre</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var estado in Model)
            {
                <tr class="small">
                    <td>@estado.Id</td>
                    <td>@estado.Nombre</td>
                    <td>
                        <button type="button"
                                class="btn btn-sm btn-outline-primary generic-edit"
                                title="Editar"
                                data-title="Editar estado tramite"
                                data-action="@Url.Action("EditarEstado", "Configuracion")"
                                data-id="@estado.Id"
                                data-nombre="@estado.Nombre"
                                data-placeholder="Nombre del tramite"
                                data-icon="fas fa-clipboard-check">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button type="button"
                                class="btn btn-sm btn-outline-danger generic-delete"
                                title="Desactivar"
                                data-action="@Url.Action("DesactivarEstado", "Configuracion")"
                                data-id="@estado.Id"
                                data-name="@estado.Nombre"
                                data-entity="estado">
                            <i class="fas fa-ban"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        // Configuración de DataTable
        $('#tblEstados').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/2.3.2/i18n/es-MX.json',
            },
            searching: false,
            paging: false,
            scrollCollapse: true,
            scrollY: '35vh',
            columnDefs:
            [
                {
                    targets: 0,
                    width: "1%"
                },
                {
                    targets: 2,
                    width: "90px",
                    className: "text-center",
                    orderable: false
                }
            ]
        });
    });
</script>
