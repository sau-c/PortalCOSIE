@model PortalCOSIE.Domain.Entities.Carreras.Carrera
@using PortalCOSIE.Domain.Enums

@{
    ViewData["Title"] = "Unidades de aprendizaje de " + Model.Nombre;
}

<div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="mb-0 py-1">@ViewData["Title"]</h6>
        <div>
            <a asp-action="Index" asp-controller="Configuracion" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-2"></i>Volver
            </a>
            <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modalUnidad"
                    data-mode="create" data-carrera-id="@Model.Id">
                <i class="fas fa-plus me-2"></i>Crear
            </button>
        </div>
    </div>

    <div class="card-body overflow-auto p-4" style="height: calc(100vh - 164px);">
        <table id="tblUnidades" class="table table-hover table-bordered align-middle">
            <thead class="table-secondary small">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Semestre</th>
                    <th style="width:95px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var unidad in Model.UnidadesAprendizaje)
                {
                    <tr class="small" style="@(unidad.IsDeleted ? "background-color: #ffd4d4" : "")">
                        <td>@unidad.Id</td>
                        <td>@unidad.Nombre</td>
                        <td>@unidad.Semestre</td>
                        <td class="text-center">
                            <button class="btn btn-sm btn-outline-primary"
                                    title="Editar"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalUnidad"
                                    data-mode="edit"
                                    data-unidad-id="@unidad.Id"
                                    data-unidad-name="@unidad.Nombre"
                                    data-unidad-semestre="@((int)unidad.Semestre)"
                                    data-carrera-nombre="@Model.Nombre">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger"
                                    title="Desactivar"
                                    data-bs-toggle="modal"
                                    data-bs-target="#desactivarModal"
                                    data-unidad-id="@unidad.Id"
                                    data-unidad-name="@unidad.Nombre"
                                    data-carrera-nombre="@Model.Nombre"
                                    data-unidad-semestre="@unidad.Semestre">
                                <i class="fas fa-eye-slash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Reutilizable Crear/Editar -->
<div class="modal fade" id="modalUnidad" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="unidadForm" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="hiddenUnidadId" name="id" />
                <input type="hidden" id="hiddenCarreraNombre" name="carrera" />
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="unidadModalTitle"></h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nombre de la unidad</label>
                        <input type="text" class="form-control" id="txtUnidadNombre" name="nombre"
                               placeholder="Ingrese el nombre de la unidad"
                               maxlength="100" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Semestre</label>
                        <select class="form-select" id="unidadSemestre" name="semestre"
                                asp-items="Html.GetEnumSelectList<Semestre>()" required>
                            <option value="">Seleccione un semestre</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Eliminar -->
<div class="modal fade" id="desactivarModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="deleteForm" asp-action="ToggleUnidad" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="modalUnidadIdInput" name="id" />
                <input type="hidden" id="carreraNombreEliminar" name="carreraNombre" />
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Desactivar unidad</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning mb-3">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        La unidad será desactivada.
                    </div>
                    <ul class="list-group small">
                        <li class="list-group-item"><strong>Nombre:</strong> <span id="modalUnidadName"></span></li>
                        <li class="list-group-item"><strong>Semestre:</strong> <span id="modalUnidadSemestre"></span></li>
                        <li class="list-group-item"><strong>Carrera:</strong> @Model.Nombre</li>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-eye-slash me-2"></i>Desactivar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            // Configuración de DataTable
            $('#tblUnidades').DataTable({
                language: { url: '//cdn.datatables.net/plug-ins/2.3.2/i18n/es-MX.json' },
                paging: false,
                scrollCollapse: true,
                scrollY: '50vh',
                columnDefs: [
                    { targets: 0, width: "1%" },
                    { targets: 3, width: "95px", orderable: false }
                ]
            });

            // Modal Crear/Editar Unidad
            $('#modalUnidad').on('show.bs.modal', function (event) {
                const button = $(event.relatedTarget);
                const mode = button.data('mode');
                const form = $('#unidadForm')[0];

                form.reset(); // Reset del formulario

                if (mode === 'create') {
                    $('#unidadModalTitle').text('Crear nueva unidad de aprendizaje');
                    $('#hiddenUnidadId').val('');
                    $('#hiddenCarreraNombre').val(button.data('carrera-id'));
                } else {
                    $('#unidadModalTitle').text('Editar unidad de aprendizaje');
                    $('#hiddenUnidadId').val(button.data('unidad-id'));
                    $('#hiddenCarreraNombre').val(button.data('carrera-id'));
                    $('#txtUnidadNombre').val(button.data('unidad-name'));
                    $('#unidadSemestre').val(button.data('unidad-semestre'));
                }
            });

            // Modal Desactivar Unidad
            $('#desactivarModal').on('show.bs.modal', function (event) {
                const button = $(event.relatedTarget);
                $('#modalUnidadIdInput').val(button.data('unidad-id'));
                $('#carreraNombreEliminar').val(button.data('carrera-nombre'));
                $('#modalUnidadName').text(button.data('unidad-name'));
                $('#modalUnidadSemestre').text(button.data('unidad-semestre'));
            });

            // Submit Crear/Editar Unidad
            $('#unidadForm').on('submit', async function (e) {
                e.preventDefault();
                const form = this;
                const url = form.action;
                const formData = new FormData(form);

                const resultado = await executeFetch(url, 'POST', formData);
                if (resultado.success) {
                    $('#modalUnidad').modal('hide');
                    showGlobalModal('success', resultado.message);
                } else {
                    showGlobalModal('error', resultado.message);
                }
            });

            // Submit Desactivar Unidad
            $('#deleteForm').on('submit', async function (e) {
                e.preventDefault();
                const form = this;
                const url = form.action;
                const formData = new FormData(form);

                const resultado = await executeFetch(url, 'POST', formData);
                if (resultado.success) {
                    $('#desactivarModal').modal('hide');
                    showGlobalModal('success', resultado.message);
                } else {
                    showGlobalModal('error', resultado.message);
                }
            });
        });
    </script>
}

