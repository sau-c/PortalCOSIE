@model PortalCOSIE.Domain.Entities.Carreras.Carrera
@using PortalCOSIE.Domain.Enums

@{
    ViewData["Title"] = "Unidades de aprendizaje de " + Model.Nombre.ToLower();
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="mb-0 py-1"><i class="fas fa-book me-2"></i>@ViewData["Title"]</h6>
        <div class="d-flex gap-2">
            <a asp-action="Index" asp-controller="Configuracion" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i>Volver
            </a>
            <button class="btn btn-primary btn-sm"
                    data-bs-toggle="modal"
                    data-bs-target="#modalUnidad"
                    data-mode="create">
                <i class="fas fa-plus me-1"></i>Crear
            </button>
        </div>
    </div>
    <div class="card-body overflow-auto px-4" style="height: calc(100vh - 164px);">
        <table id="tblUnidades" class="table table-hover">
            <thead class="table-light table-bordered">
                <tr class="small">
                    <th width="5%">ID</th>
                    <th>Nombre</th>
                    <th>Semestre</th>
                    <th>Estado</th>
                    <th class="text-center">Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model.UnidadesAprendizaje)
                {
                    <tr class="@(u.IsDeleted ? "table-danger text-muted opacity-75" : "") small">
                        <td class="fw-bold">@u.Id</td>
                        <td>@u.Nombre</td>
                        <td>@u.Semestre</td>
                        <td>
                            <span class="badge @(u.IsDeleted ? "bg-danger" : "bg-success")">
                                @(u.IsDeleted ? "Inactiva" : "Activa")
                            </span>
                        </td>
                        <td class="text-center">
                            <div class="btn-group btn-group-sm">
                                <button class="btn btn-outline-primary"
                                        data-bs-toggle="modal" data-bs-target="#modalUnidad"
                                        data-mode="edit"
                                        data-id="@u.Id" data-nombre="@u.Nombre" data-semestre="@((int)u.Semestre)">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-outline-danger"
                                        data-bs-toggle="modal" data-bs-target="#modalDesactivar"
                                        data-id="@u.Id" data-nombre="@u.Nombre" data-semestre="@u.Semestre">
                                    <i class="fas fa-eye-slash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modalUnidad" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="formUnidad" method="post" autocomplete="off">
                @Html.AntiForgeryToken()
                <input type="hidden" name="carreraId" value="@Model.Id" />

                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="modalUnidadTitle">Gestión de Unidad</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">ID / Clave</label>
                        <input type="text" class="form-control uppercase" name="unidadId" id="inpId" maxlength="10" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nombre</label>
                        <input type="text" class="form-control" name="nombre" id="inpNombre" required maxlength="100" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Semestre</label>
                        <select class="form-select" name="semestre" id="inpSemestre" asp-items="Html.GetEnumSelectList<Semestre>()" required>
                            <option value="">-- Seleccionar --</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i><span>Guardar</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="modalDesactivar" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="formDesactivar" asp-action="ToggleUnidad" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="carreraId" value="@Model.Id" />
                <input type="hidden" name="unidadId" id="delId" />

                <div class="modal-header bg-danger text-white">
                    <h6 class="modal-title">Confirmar acción</h6>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center">
                    <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                    <p>¿Deseas cambiar el estado de la unidad <strong id="delNombre"></strong>?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-exchange-alt me-2"></i><span>Confirmar</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Inicializar DataTable simplificado
            new DataTable('#tblUnidades', {
                language: { url: '//cdn.datatables.net/plug-ins/2.3.2/i18n/es-MX.json' },
                paging: false,
                scrollY: 'calc(100vh - 370px)',
                columnDefs:
                [
                    { targets: 0, width: "1%" },
                    { targets: 4, width: "95px", orderable: false }
                ]
            });

            const modalUnidadEl = document.getElementById('modalUnidad');
            const modalUnidadTitle = document.getElementById('modalUnidadTitle');
            const formUnidad = document.getElementById('formUnidad');
            const formDesactivar = document.getElementById('formDesactivar');

            // Instancias de Bootstrap Modals
            const bsModalUnidad = new bootstrap.Modal(modalUnidadEl);
            const bsModalDel = new bootstrap.Modal(document.getElementById('modalDesactivar'));

            // 1. Configuración dinámica del Modal Crear/Editar
            modalUnidadEl.addEventListener('show.bs.modal', (event) => {
                const btn = event.relatedTarget;
                const isEdit = btn.dataset.mode === 'edit';

                // Reset visual
                formUnidad.reset();
                modalUnidadTitle.textContent = isEdit ? 'Editar Unidad' : 'Nueva Unidad';
                formUnidad.action = isEdit ? '@Url.Action("EditarUnidad")' : '@Url.Action("Unidades")';

                // Configurar inputs
                const inpId = document.getElementById('inpId');
                inpId.readOnly = isEdit;

                if (isEdit) {
                    inpId.value = btn.dataset.id;
                    document.getElementById('inpNombre').value = btn.dataset.nombre;
                    document.getElementById('inpSemestre').value = btn.dataset.semestre;
                    // Campo oculto extra si tu backend lo requiere para el binding
                    if(!formUnidad.querySelector('input[name="id"]')) {
                        const hidden = document.createElement('input');
                        hidden.type = 'hidden'; hidden.name = 'id';
                        formUnidad.appendChild(hidden);
                    }
                    formUnidad.querySelector('input[name="id"]').value = btn.dataset.id;
                }
            });

            // 2. Configuración dinámica del Modal Desactivar
            document.getElementById('modalDesactivar').addEventListener('show.bs.modal', (event) => {
                const btn = event.relatedTarget;
                document.getElementById('delId').value = btn.dataset.id;
                document.getElementById('delNombre').textContent = btn.dataset.nombre;
            });

            // 3. Manejador Genérico de Submit (DRY)
            const manejarSubmit = async (e, form, modalInstance) => {
                e.preventDefault();

                // Usamos tu función bloqueadorBoton
                const btnSubmit = form.querySelector('button[type="submit"]');
                const control = bloqueadorBoton(btnSubmit);

                control.bloquear();

                try {
                    const formData = new FormData(form);
                    const res = await executeFetch(form.action, 'POST', formData);

                    modalInstance.hide();
                    showGlobalModal('success', res.message);
                } catch (error) {
                    showGlobalModal('error', error.message, {
                        onClose: () => control.restaurar()
                    });
                }
            };

            // Event Listeners para los forms
            formUnidad.addEventListener('submit', (e) => manejarSubmit(e, formUnidad, bsModalUnidad));
            formDesactivar.addEventListener('submit', (e) => manejarSubmit(e, formDesactivar, bsModalDel));
        });
    </script>
}