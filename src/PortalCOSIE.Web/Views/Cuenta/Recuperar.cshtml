@using PortalCOSIE.Application.DTO.Cuenta
@model CorreoDTO
@{
    ViewData["Title"] = "Recuperar contraseña";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<div class="card p-4 shadow-lg border-0" style="max-width: 400px;">
    <div class="card-body">
        <div class="text-center mb-4">
            <h3>Recuperar contraseña</h3>
            <p class="text-muted">Ingresa tu correo electrónico y te enviaremos un enlace para restablecer tu contraseña.</p>
        </div>

        <form asp-action="Recuperar" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger small" role="alert"></div>

            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                <input asp-for="Correo" class="form-control" type="email" placeholder="Correo electrónico" />
            </div>
            <span asp-validation-for="Correo" class="text-danger small"></span>

            <div class="d-flex justify-content-between mt-4 gap-2">
                <a href="/" class="btn btn-outline-secondary w-50 shadow-sm">
                    Cancelar
                </a>
                <button type="submit" class="btn btn-primary w-50 shadow-sm">
                    Enviar
                </button>
            </div>
        </form>
    </div>
</div>