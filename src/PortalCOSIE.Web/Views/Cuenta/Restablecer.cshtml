@using PortalCOSIE.Application.Features.Usuarios
@using PortalCOSIE.Application.Features.Usuarios.DTO
@model RestablecerDTO
@{
    ViewData["Title"] = "Restablecer contraseña";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<div class="card p-4 shadow-lg border-0" style="max-width: 350px;">
    <div class="card-body">
        <div class="text-center">
            <h2>Restablecer contraseña</h2>
            <p class="text-muted">Crea una contraseña segura</p>
        </div>

        <form id="formRestablecer" asp-action="Restablecer" method="post">
            <input type="hidden" asp-for="Correo" />
            <input type="hidden" asp-for="Token" />

            <div class="input-group mt-3">
                <span class="input-group-text"><i class="fa fa-lock"></i></span>
                <input type="password" asp-for="NuevaContrasena" class="form-control" placeholder="Nueva contrasena" required />
            </div>

            <div class="input-group mt-3">
                <span class="input-group-text"><i class="fa fa-lock"></i></span>
                <input type="password" asp-for="ConfirmarContrasena" class="form-control" placeholder="Confirmar contraseña" required />
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary shadow-sm w-100">
                    <i class="fas fa-exchange-alt me-2"></i><span>Restablecer</span>
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('formRestablecer');
            const btnSubmit = form.querySelector('button[type="submit"]');
            const boton = bloqueadorBoton(btnSubmit);

            // Evento submit
            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                e.stopImmediatePropagation();
                boton.bloquear();

                try {
                    const url = form.getAttribute('action');
                    const formData = new FormData(form);
                    const data = await executeFetch(url, 'POST', formData);
                    showGlobalModal('success', data.message, {
                        redirectUrl: '/',
                        autoClose: false
                    });
                } catch (error) {
                    showGlobalModal('error', error.message, {
                        onClose: function() {
                            boton.restaurar();
                        }
                    });
                }
            });
        });
    </script>
}