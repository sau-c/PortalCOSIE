@using PortalCOSIE.Application.DTO.Cuenta
@model RestablecerDTO
@{
    ViewData["Title"] = "Restablecer contraseña";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<div class="card p-4 shadow-lg border-0" style="max-width: 350px;">
    <div class="card-body">
        <div class="text-center">
            <h2>Restablecer contraseña</h2>
            <p class="text-muted">Crea una contraseña segura</p>
        </div>

        <form asp-action="Restablecer" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Correo" />
            <input type="hidden" asp-for="Token" />

            <div class="input-group mt-3">
                <span class="input-group-text"><i class="fa fa-lock"></i></span>
                <input asp-for="NuevaContrasena" class="form-control" placeholder="Nueva contrasena" />
            </div>
            <span asp-validation-for="NuevaContrasena" class="text-danger small"></span>

            <div class="input-group mt-3">
                <span class="input-group-text"><i class="fa fa-lock"></i></span>
                <input asp-for="ConfirmarContrasena" class="form-control" placeholder="Confirmar contraseña" />
            </div>
            <span asp-validation-for="ConfirmarContrasena" class="text-danger small"></span>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary shadow-sm w-100">
                    Restablecer
                </button>
            </div>
        </form>
    </div>
</div>