@using PortalCOSIE.Application.Features.Usuarios
@using PortalCOSIE.Application.Features.Usuarios.DTO
@model IngresarDTO
@{
    ViewData["Title"] = "Ingresar";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<div class="card p-4 shadow-lg border-0" style="max-width: 400px;">
    <div class="card-body">
        <div class="container text-center">
            <h2>Iniciar sesión</h2>
            <p class="text-muted">Accede a tu cuenta</p>
        </div>
        <form id="formIngresar" asp-action="Ingresar" method="post">
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                <input asp-for="Correo" type="email" class="form-control" placeholder="Correo" required />
            </div>

            <div class="input-group mt-3">
                <span class="input-group-text"><i class="fa fa-lock"></i></span>
                <input asp-for="Contrasena" type="password" class="form-control" placeholder="Contrasena" required />
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary shadow-sm w-100">
                    <i class="fas fa-sign-in me-2"></i><span>Ingresar</span>
                </button>
            </div>

            <div class="form-text text-center mt-2">
                ¿Olvidaste tu contraseña? <a asp-action="Recuperar">Recupérala aquí</a>
            </div>
            <div class="form-text text-center mt-2">
                ¿No tienes una cuenta? <a asp-action="Crear">Crear cuenta</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('formIngresar');
            const btnSubmit = form.querySelector('button[type="submit"]');
            const boton = bloqueadorBoton(btnSubmit);

            // Evento submit
            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                e.stopImmediatePropagation();
                boton.bloquear();

                try {
                    const url = form.getAttribute('action');
                    const formData = new FormData(form);
                    await executeFetch(url, 'POST', formData);
                } catch (error) {
                    showGlobalModal('error', error.message, {
                        onClose: function() {
                            boton.restaurar();
                        }
                    });
                }
            });

            @if (TempData["Message"] != null)
            {
                <text>
                        showGlobalModal('@Html.Raw(TempData["MessageType"])', '@Html.Raw(TempData["Message"])',{autoClose: false});
                </text>
            }
        });
    </script>
}