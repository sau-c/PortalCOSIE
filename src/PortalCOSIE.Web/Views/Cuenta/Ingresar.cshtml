@using PortalCOSIE.Application.DTO.Cuenta
@model IngresarDTO
@{
    ViewData["Title"] = "Ingresar";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<div class="card p-4 shadow-lg border-0" style="max-width: 400px;">
    <div class="card-body">
        <div class="container text-center">
            <h2>Iniciar sesión</h2>
            <p class="text-muted">Accede a tu cuenta</p>
        </div>
        <form asp-action="Ingresar" method="post">
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Message"]
                </div>
            }
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                <input asp-for="Correo" class="form-control" type="email" placeholder="Correo" />
            </div>
            <span asp-validation-for="Correo" class="text-danger small"></span>

            <div class="input-group mt-3">
                <span class="input-group-text"><i class="fa fa-lock"></i></span>
                <input asp-for="Contrasena" class="form-control" placeholder="Contrasena" />
            </div>
            <span asp-validation-for="Contrasena" class="text-danger small"></span>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary shadow-sm w-100">
                    Ingresar
                </button>
            </div>

            <div class="form-text text-center mt-2">
                ¿Olvidaste tu contraseña? <a asp-action="Recuperar">Recupérala aquí</a>
            </div>
            <div class="form-text text-center mt-2">
                ¿No tienes una cuenta? <a asp-action="Crear">Crea una</a>
            </div>
        </form>
    </div>
</div>
