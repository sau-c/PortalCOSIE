@model PortalCOSIE.Application.DTO.Cuenta.RegistrarDTO
@{
    ViewData["Title"] = "Registrar cuenta";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<div class="card p-4 shadow-lg border-0" style="max-width: 500px;">
    <div class="card-body">
        <div class="container text-center">
            <h2>Registrar</h2>
            <p class="text-muted">Completa tus datos</p>
        </div>

        <form asp-action="Registrar" novalidate method="post">
            <div class="row mb-3">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <input type="text" id="nombre" name="nombre" class="form-control"
                           pattern="[A-Za-záéíóúÁÉÍÓÚñÑüÜ\s]+" placeholder="Nombre" required>
                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <input type="text" id="apellidoPaterno" name="apellidoPaterno" class="form-control"
                           pattern="[A-Za-záéíóúÁÉÍÓÚñÑüÜ\s]+" placeholder="Apellido paterno" required>
                    <span asp-validation-for="ApellidoPaterno" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <input type="text" id="apellidoMaterno" name="apellidoMaterno" class="form-control"
                           pattern="[A-Za-záéíóúÁÉÍÓÚñÑüÜ\s]+" placeholder="Apellido materno" required>
                    <span asp-validation-for="ApellidoMaterno" class="text-danger small"></span>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <input type="text" id="numeroBoleta" name="numeroBoleta" class="form-control" required
                           placeholder="No. de boleta"
                           maxlength="10"
                           pattern="\d*"
                           oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
                    <span asp-validation-for="NumeroBoleta" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa fa-graduation-cap"></i></span>
                        <select asp-items="ViewBag.Carreras" id="CarreraId" name="CarreraId" class="form-select" required>
                            <option value="">- Carrera -</option>
                        </select>
                    </div>
                    <span asp-validation-for="CarreraId" class="text-danger small"></span>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                        <select asp-items="ViewBag.Periodos" id="periodoIngreso" name="periodoIngreso" class="form-select" required>
                            <option value="">- Periodo ingreso -</option>
                        </select>
                    </div>
                    <span asp-validation-for="PeriodoIngreso" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa fa-graduation-cap"></i></span>
                        <select asp-for="PlanEstudioId" class="form-select" required>
                            <option value="" disabled selected hidden>- Plan de estudio -</option>
                            <option value="1">1998</option>
                            <option value="2">2009</option>
                        </select>
                    </div>
                    <span asp-validation-for="PlanEstudioId" class="text-danger small"></span>
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary shadow-sm w-100">
                    Registrar
                </button>
            </div>
        </form>

    </div>
</div>