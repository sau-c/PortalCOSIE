@model PortalCOSIE.Application.DTO.Cuenta.RegistrarDTO
@{
    ViewData["Title"] = "Registrar cuenta";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<div class="card p-4 shadow-lg border-0" style="max-width: 500px;">
    <div class="card-body">
        <div class="container text-center">
            <h2>Registrar</h2>
            <p class="text-muted">Completa tus datos</p>
        </div>

        <form id="formRegistrar" asp-action="Registrar" method="post">
            <div class="row mb-3">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <input type="text" asp-for="Nombre" class="form-control"
                           pattern="[A-Za-záéíóúÁÉÍÓÚñÑüÜ\s]+" placeholder="Nombre" required>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <input type="text" asp-for="ApellidoPaterno" class="form-control"
                           pattern="[A-Za-záéíóúÁÉÍÓÚñÑüÜ\s]+" placeholder="Apellido paterno" required>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <input type="text" asp-for="ApellidoMaterno" class="form-control"
                           pattern="[A-Za-záéíóúÁÉÍÓÚñÑüÜ\s]+" placeholder="Apellido materno" required>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <input type="text" asp-for="NumeroBoleta" class="form-control" required
                           placeholder="No. de boleta"
                           maxlength="10"
                           pattern="\d*"
                           oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa fa-graduation-cap"></i></span>
                        <select asp-items="ViewBag.Carreras" asp-for="CarreraId" class="form-select" required>
                            <option value="">- Carrera -</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                        <select asp-items="ViewBag.Periodos" asp-for="PeriodoIngreso" class="form-select" required>
                            <option value="">- Periodo ingreso -</option>
                        </select>
                    </div>
                </div>
            </div>

            @* <div class="row mb-3">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa fa-graduation-cap"></i></span>
                        <select asp-for="PlanEstudioId" class="form-select" required>
                            <option value="" disabled selected hidden>- Plan de estudio -</option>
                            <option value="1">1998</option>
                            <option value="2">2009</option>
                        </select>
                    </div>
                </div>
            </div> *@

            <div class="mb-3">
                <button type="submit" class="btn btn-primary shadow-sm w-100">
                    <i class="fas fa-user-plus me-2"></i><span>Registrar</span>
                </button>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('formRegistrar');
            const btnSubmit = form.querySelector('button[type="submit"]');
            const boton = bloqueadorBoton(btnSubmit);

            // Evento submit
            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                e.stopImmediatePropagation();
                boton.bloquear();

                try {
                    const url = form.getAttribute('action');
                    const formData = new FormData(form);
                    const data = await executeFetch(url, 'POST', formData);
                    showGlobalModal('success', data.message, {
                        redirectUrl: '/',
                        autoClose: false
                    });
                } catch (error) {
                    showGlobalModal('error', error.message, {
                        onClose: function() {
                            boton.restaurar();
                        }
                    });
                }
            });
        });
    </script>
}