@model PortalCOSIE.Application.DTO.Usuario.AlumnoDTO
@{
    ViewData["Title"] = "Editar alumno";
}

<div class="card shadow">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="mb-0 py-1">@ViewData["Title"]</h6>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-2"></i>Volver
            </a>
        </div>
    </div>

    <div class="card-body overflow-auto p-4" style="height: calc(100vh - 164px);">
        <form asp-action="Editar" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <fieldset class="border rounded px-3 mb-3">
                <legend class="float-none w-auto px-2 text-primary fs-6">
                    <i class="fas fa-user-circle me-2"></i>Datos personales
                </legend>
                <div class="row mb-4">
                    <input type="hidden" asp-for=@Model.IdentityUserId />
                    <div class="col-lg-3 col-md-4">
                        <label for="nombre" class="form-label">Nombre:</label>
                        <input asp-for="Nombre" type="text" class="form-control" value="@Model.Nombre" required>
                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                    </div>

                    <div class="col-lg-3 col-md-4">
                        <label for="apellidoPaterno" class="form-label">Apellido paterno:</label>
                        <input asp-for="ApellidoPaterno" type="text" class="form-control" value="@Model.ApellidoPaterno" required>
                        <span asp-validation-for="ApellidoPaterno" class="text-danger small"></span>
                    </div>

                    <div class="col-lg-3 col-md-4">
                        <label for="apellidoMaterno" class="form-label">Apellido materno:</label>
                        <input asp-for="ApellidoMaterno" type="text" class="form-control" value="@Model.ApellidoMaterno" required>
                        <span asp-validation-for="ApellidoMaterno" class="text-danger small"></span>
                    </div>
                </div>
            </fieldset>

            @* <h5 class="text-primary"><i class="fas fa-graduation-cap me-2"></i>Datos académicos</h5> *@
            <fieldset class="border rounded px-3 mb-3">
                <legend class="float-none w-auto px-2 text-primary fs-6">
                    <i class="fas fa-graduation-cap me-2"></i>Datos académicos
                </legend>
                <div class="row mb-4">
                    <div class="col-lg-3">
                        <label asp-for="NumeroBoleta" class="form-label">No. de boleta:</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-id-card"></i>
                            </span>
                            <input asp-for="NumeroBoleta" type="text" class="form-control" required
                                   placeholder="Ej. 2020640595"
                                   maxlength="10"
                                   pattern="\d*"
                                   oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
                        </div>
                        <span asp-validation-for="NumeroBoleta" class="text-danger small"></span>
                    </div>
                    <div class="col-lg-3">
                        <label asp-for="CarreraId" class="form-label">Carrera:</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-university"></i>
                            </span>
                            <select asp-for="CarreraId" asp-items="ViewBag.Carreras" class="form-select" required>
                                <option value=0>- Carrera -</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <label class="form-label">Periodo de ingreso:</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                            <select asp-for="PeriodoIngreso" asp-items="ViewBag.Periodos" class="form-select" required>
                                <option value="">- Periodo ingreso -</option>
                            </select>
                        </div>
                        <span asp-validation-for="PeriodoIngreso" class="text-danger small"></span>
                    </div>
                </div>
            </fieldset>

            <div class="text-end">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Guardar
                </button>
            </div>
        </form>
    </div>

</div>
