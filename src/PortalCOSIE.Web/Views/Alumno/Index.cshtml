@model IEnumerable<PortalCOSIE.Application.DTO.Usuario.AlumnoConIdentityDTO>
@{
    ViewData["Title"] = "Gestión de alumnos";
}

<div class="card shadow">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="mb-0 fw-bold py-2">@ViewData["Title"]</h6>
            <a asp-action="Crear" class="btn btn-primary btn-sm">
                <i class="fas fa-plus me-2"></i>Crear alumno
            </a>
        </div>
    </div>

    <div class="card-body overflow-auto p-4" style="height: calc(100vh - 164px);">
        <div class="table-responsive">
            <table id="tblAlumnos" class="table table-striped table-bordered table-hover w-100">
                <thead class="table-secondary">
                    <tr>
                        <th>No. Boleta</th>
                        <th>Nombre</th>
                        <th>Apellido paterno</th>
                        <th>Apellido materno</th>
                        <th>Carrera</th>
                        <th>Plan</th>
                        <th>Fecha ingreso</th>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var alumno in Model)
                    {
                        <tr>
                            <td>@alumno.NumeroBoleta</td>
                            <td>@alumno.Nombre</td>
                            <td>@alumno.ApellidoPaterno</td>
                            <td>@alumno.ApellidoMaterno</td>
                            <td>@alumno.Carrera</td>
                            <td>@alumno.PlanEstudio</td>
                            <td>@alumno.FechaIngreso.ToString("yyyy-MM-dd")</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <span class="me-2">@alumno.Correo</span>
                                    <button type="button"
                                            class="btn btn-sm btn-link p-0 text-primary"
                                            title="Editar correo"
                                            data-bs-toggle="modal"
                                            data-bs-target="#editEmailModal"
                                            data-user-id="@alumno.IdentityUserId"
                                            data-user-email="@alumno.Correo">
                                        <i class="fas fa-edit fa-sm"></i>
                                    </button>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <span class="badge @(alumno.Rol == "Inactivo" ? "bg-danger" : "bg-success") me-2">
                                        @alumno.Rol
                                    </span>
                                    <button type="button"
                                            class="btn btn-sm btn-link p-0 text-info"
                                            title="Editar rol"
                                            data-bs-toggle="modal"
                                            data-bs-target="#editRoleModal"
                                            data-user-id="@alumno.IdentityUserId"
                                            data-user-role="@alumno.Rol">
                                        <i class="fas fa-edit fa-sm"></i>
                                    </button>
                                </div>
                            </td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a asp-action="Editar" asp-route-id="@alumno.IdentityUserId" class="btn btn-sm btn-outline-primary" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button"
                                            class="btn btn-sm btn-outline-danger"
                                            title="Eliminar"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteModal"
                                            data-user-id="@alumno.IdentityUserId"
                                            data-user-name="@alumno.Nombre @alumno.ApellidoPaterno @alumno.ApellidoMaterno"
                                            data-user-email="@alumno.Correo"
                                            data-user-boleta="@alumno.NumeroBoleta">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal de eliminación -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="deleteForm" asp-action="Eliminar" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Confirmar eliminación</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning mb-3">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Esta acción no se puede deshacer. Todos los datos asociados al usuario serán eliminados permanentemente.
                    </div>

                    <div class="mb-3">
                        <p>¿Está seguro de eliminar el siguiente alumno?</p>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <strong>Nombre:</strong> <span id="modalUserName"></span>
                            </li>
                            <li class="list-group-item">
                                <strong>Correo:</strong> <span id="modalUserEmail"></span>
                            </li>
                            <li class="list-group-item">
                                <strong>Boleta:</strong> <span id="modalUserBoleta"></span>
                            </li>
                        </ul>
                    </div>

                    <input type="hidden" id="modalUserId" name="id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i>Confirmar eliminación
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal para editar correo -->
<div class="modal fade" id="editEmailModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="editEmailForm" asp-action="ActualizarCorreo" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Actualizar correo electrónico</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="emailInput" class="form-label">Nuevo correo electrónico</label>
                        <input type="email" class="form-control" id="emailInput" name="email" required>
                        <div class="form-text">El usuario recibirá un correo para confirmar el cambio</div>
                    </div>
                    <input type="hidden" id="emailUserId" name="userId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Guardar cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal para editar rol -->
<div class="modal fade" id="editRoleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="editRoleForm" asp-action="ActualizarRol" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-info text-white">
                    <h5 class="modal-title">Actualizar rol del usuario</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Seleccione el rol</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="role" id="roleAlumno" value="Alumno" checked>
                            <label class="form-check-label" for="roleAlumno">
                                Alumno
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="role" id="roleInactivo" value="Inactivo">
                            <label class="form-check-label" for="roleInactivo">
                                Inactivo (quitar rol)
                            </label>
                        </div>
                    </div>
                    <input type="hidden" id="roleUserId" name="userId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-info">
                        <i class="fas fa-save me-2"></i>Actualizar rol
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Configuración de DataTable
            $('#tblAlumnos').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.3.2/i18n/es-MX.json',
                },
                paging: false,
                scrollCollapse: true,
                scrollY: '50vh'
            });

            // Manejo del modal de eliminación
            $('#deleteModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var modal = $(this);
                modal.find('#modalUserId').val(button.data('user-id'));
                modal.find('#modalUserName').text(button.data('user-name'));
                modal.find('#modalUserEmail').text(button.data('user-email'));
                modal.find('#modalUserBoleta').text(button.data('user-boleta'));
            });

            // Manejo del modal de edición de correo
            $('#editEmailModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var modal = $(this);
                modal.find('#emailUserId').val(button.data('user-id'));
                modal.find('#emailInput').val(button.data('user-email'));
            });

            // Manejo del modal de edición de rol
            $('#editRoleModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var modal = $(this);
                modal.find('#roleUserId').val(button.data('user-id'));

                // Establecer el radio button según el rol actual
                var currentRole = button.data('user-role');
                if (currentRole === 'Inactivo') {
                    modal.find('#roleInactivo').prop('checked', true);
                } else {
                    modal.find('#roleAlumno').prop('checked', true);
                }
            });

            // Validación del formulario de correo
            $('#editEmailForm').on('submit', function() {
                var email = $('#emailInput').val();
                if (!email) {
                    alert('Por favor ingrese un correo electrónico válido');
                    return false;
                }
                return true;
            });
        });
    </script>
}