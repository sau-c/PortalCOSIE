@model IEnumerable<PortalCOSIE.Application.DTO.Usuario.AlumnoDTO>
@{
    ViewData["Title"] = "Gestión de alumnos";
}

<div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="mb-0 py-1"><i class="fas fa-user-graduate me-2"></i>@ViewData["Title"]</h6>
        <button style="display: none" class="btn btn-primary btn-sm"
                data-bs-toggle="modal"
                data-bs-target="#modalAlumno"
                data-mode="create">
            <i class="fas fa-plus me-2"></i>Crear
        </button>
    </div>

    <div class="card-body overflow-auto px-4" style="height: calc(100vh - 164px);">
        <table id="tblAlumnos" class="table table-hover">
            <thead class="table-light table-bordered">
                <tr class="small">
                    <th>No. Boleta</th>
                    <th>Nombre</th>
                    <th>Apellido paterno</th>
                    <th>Apellido materno</th>
                    <th>Carrera</th>
                    <th>Periodo ingreso</th>
                    <th>Correo</th>
                    <th>Celular</th>
                    <th>Rol</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var alumno in Model)
                {
                    <tr class="@(alumno.Rol == null ? "table-danger text-muted opacity-75" : "") small">
                        <td class="fw-bold">@alumno.NumeroBoleta</td>
                        <td>@alumno.Nombre</td>
                        <td>@alumno.ApellidoPaterno</td>
                        <td>@alumno.ApellidoMaterno</td>
                        <td class="@(alumno.Carrera.IsDeleted ? "text-danger text-decoration-line-through" : "")">
                            @alumno.Carrera.Nombre
                        </td>
                        <td>@alumno.PeriodoIngreso</td>
                        <td class="editable-cell"
                            title="Editar"
                            data-bs-toggle="modal"
                            data-bs-target="#modalCorreo"
                            data-id="@alumno.IdentityUserId"
                            data-correo="@alumno.Correo">
                            @alumno.Correo
                        </td>
                        <td class="editable-cell"
                            title="Editar"
                            data-bs-toggle="modal"
                            data-bs-target="#modalCelular"
                            data-id="@alumno.IdentityUserId"
                            data-celular="@alumno.Celular">
                            @alumno.Celular
                        </td>
                        <td class="text-center">
                            <button type="button"
                                    class="btn btn-link p-0 border-0 bg-transparent toggle-role-btn"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalToggle"
                                    data-user-id="@alumno.IdentityUserId"
                                    data-current-role="@(alumno.Rol ?? "Inactivo")"
                                    data-role-type="Alumno"
                                    title="Editar">
                                <span class="badge @(string.IsNullOrEmpty(alumno.Rol) ? "bg-danger" : "bg-success") badge-role">
                                    @(string.IsNullOrEmpty(alumno.Rol) ? "Inactivo" : alumno.Rol)
                                </span>
                            </button>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalAlumno"
                                    data-mode="edit"
                                    data-userid="@alumno.IdentityUserId"
                                    data-nombre="@alumno.Nombre"
                                    data-apellidopaterno="@alumno.ApellidoPaterno"
                                    data-apellidomaterno="@alumno.ApellidoMaterno"
                                    data-numeroboleta="@alumno.NumeroBoleta"
                                    data-carreraid="@alumno.Carrera.Id"
                                    data-periodoingreso="@alumno.PeriodoIngreso"
                                    title="Editar">
                                <i class="fas fa-edit"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<partial name="_ModalAlumno" />
<partial name="_ModalCorreo" />
<partial name="_ModalCelular" />
<partial name="_ModalToggle" />

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tblAlumnos').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.3.2/i18n/es-MX.json',
                },
                paging: false,
                scrollY: 'calc(100vh - 370px)',
                columnDefs:
                [
                    {
                        targets: 0,
                        width: "1%"
                    },
                    {
                        targets: 4,
                        width: "1%"
                    },
                    {
                        targets: 5,
                        width: "1%"
                    },
                    {
                        targets: 7,
                        width: "1%",
                        orderable: false
                    },
                    {
                        targets: 8,
                        width: "1%",
                        orderable: false
                    },
                    {
                        targets: 9,
                        width: "95px",
                        className: "text-center",
                        orderable: false
                    }
                ]
            });
        });
    </script>
}