@model IEnumerable<PortalCOSIE.Application.DTO.Usuario.AlumnoConIdentityDTO>
@{
    ViewData["Title"] = "Gestión de alumnos";
}
<style>
    .editable-cell {
        cursor: pointer;
        transition: all 0.3s;
    }

    .editable-cell:hover {
        color: #0d6efd;
    }

    .toggle-role-btn:hover .badge {
        transform: scale(1.05);
        transition: transform 0.2s ease;
    }

    .badge-role {
        transition: all 0.2s;
    }
</style>

<div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h6 class="mb-0 fw-bold py-2">@ViewData["Title"]</h6>
        </div>
    </div>
    <div class="card-body overflow-auto p-4" style="height: calc(100vh - 164px);">
        <div class="table-responsive">
            <table id="tblAlumnos" class="table table-striped table-bordered w-100">
                <thead class="table-secondary">
                    <tr class="small">
                        <th>No. Boleta</th>
                        <th>Nombre</th>
                        <th>Apellido paterno</th>
                        <th>Apellido materno</th>
                        <th>Carrera</th>
                        <th>Periodo ingreso</th>
                        <th>Correo</th>
                        <th>Celular</th>
                        <th>Rol</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var alumno in Model)
                    {
                        <tr class="small">
                            <td>@alumno.NumeroBoleta</td>
                            <td>@alumno.Nombre</td>
                            <td>@alumno.ApellidoPaterno</td>
                            <td>@alumno.ApellidoMaterno</td>
                            <td>@alumno.Carrera</td>
                            <td>@alumno.PeriodoIngreso</td>
                            <td class="editable-cell"
                                title="Editar"
                                data-bs-toggle="modal"
                                data-bs-target="#editEmailModal"
                                data-user-id="@alumno.IdentityUserId"
                                data-user-email="@alumno.Correo">
                                @alumno.Correo
                            </td>
                            <td class="editable-cell"
                                title="Editar"
                                data-bs-toggle="modal"
                                data-bs-target="#editPhoneModal"
                                data-user-id="@alumno.IdentityUserId"
                                data-user-phone="@alumno.Celular">
                                @alumno.Celular
                            </td>
                            <td class="text-center">
                                <button type="button"
                                        class="btn btn-link p-0 border-0 bg-transparent toggle-role-btn"
                                        data-bs-toggle="modal"
                                        data-bs-target="#toggleRoleModal"
                                        data-user-id="@alumno.IdentityUserId"
                                        data-current-role="@(alumno.Rol ?? "Inactivo")"
                                        data-role-type="Alumno"
                                        title="Editar">
                                    <span class="badge @(string.IsNullOrEmpty(alumno.Rol) ? "bg-danger" : "bg-success") badge-role">
                                        @(string.IsNullOrEmpty(alumno.Rol) ? "Inactivo" : alumno.Rol)
                                    </span>
                                </button>
                            </td>
                            <td>
                                <a asp-action="Editar" asp-route-id="@alumno.IdentityUserId" class="btn btn-sm btn-outline-primary" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button type="button"
                                        class="btn btn-sm btn-outline-danger"
                                        title="Eliminar"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal"
                                        data-user-id="@alumno.IdentityUserId"
                                        data-user-name="@alumno.Nombre @alumno.ApellidoPaterno @alumno.ApellidoMaterno"
                                        data-user-email="@alumno.Correo"
                                        data-user-boleta="@alumno.NumeroBoleta">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal de eliminación -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="deleteForm" asp-action="Eliminar" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Confirmar eliminación</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning mb-3">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Esta acción no se puede deshacer. Todos los datos asociados al usuario serán eliminados permanentemente.
                    </div>
                    <div class="mb-3">
                        <p>¿Está seguro de eliminar el siguiente alumno?</p>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <strong>Nombre:</strong> <span id="modalUserName"></span>
                            </li>
                            <li class="list-group-item">
                                <strong>Correo:</strong> <span id="modalUserEmail"></span>
                            </li>
                            <li class="list-group-item">
                                <strong>Boleta:</strong> <span id="modalUserBoleta"></span>
                            </li>
                        </ul>
                    </div>
                    <input type="hidden" id="modalUserId" name="id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i>Confirmar eliminación
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal para editar correo -->
<div class="modal fade" id="editEmailModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="editEmailForm" asp-action="ActualizarCorreo" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Actualizar correo electrónico</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="emailInput" class="form-label">Nuevo correo electrónico</label>
                        <input type="email" class="form-control" id="emailInput" name="correo" required>
                        <div class="form-text">El usuario recibirá un correo para confirmar el cambio</div>
                    </div>
                    <input type="hidden" id="emailUserId" name="userId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Guardar cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal para editar celular -->
<div class="modal fade" id="editPhoneModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="editPhoneForm" asp-action="ActualizarCelular" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Actualizar celular</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="phoneInput" class="form-label">Nuevo celular</label>
                        <input type="tel" class="form-control" id="phoneInput" name="celular" required>
                        <div class="form-text">El usuario recibirá un correo para confirmar el cambio</div>
                    </div>
                    <input type="hidden" id="phoneUserId" name="userId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Guardar cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal para Toggle de Rol (NUEVO) -->
<div class="modal fade" id="toggleRoleModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="toggleRoleForm" asp-action="ActualizarRol" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header" id="modalHeader">
                    <h5 class="modal-title">
                        <i id="modalIcon" class="me-2"></i>
                        <span id="modalTitle">Cambiar Estado</span>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center mb-3">
                        <div id="modalMessage" class="alert" role="alert"></div>
                    </div>
                    <input type="hidden" id="userId" name="userId" />
                    <input type="hidden" id="rol" name="rol" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" id="confirmButton" class="btn">
                        <i class="fas fa-check me-2"></i>Confirmar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Configuración de DataTable
            $('#tblAlumnos').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.3.2/i18n/es-MX.json',
                },
                paging: false,
                scrollCollapse: true,
                scrollY: '50vh',
                columnDefs:
                [
                    {
                        targets: 0,
                        width: "1%"
                    },
                    {
                        targets: 4,
                        width: "1%"
                    },
                    {
                        targets: 5,
                        width: "1%"
                    },
                    {
                        targets: 7,
                        width: "1%",
                        orderable: false
                    },
                    {
                        targets: 8,
                        width: "1%",
                        orderable: false
                    },
                    {
                        targets: 9,
                        width: "90px",
                        className: "text-center",
                        orderable: false
                    }
                ]
            });

            // Manejo del modal de eliminación
            $('#deleteModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var modal = $(this);
                modal.find('#modalUserId').val(button.data('user-id'));
                modal.find('#modalUserName').text(button.data('user-name'));
                modal.find('#modalUserEmail').text(button.data('user-email'));
                modal.find('#modalUserBoleta').text(button.data('user-boleta'));
            });

            // Manejo del modal de edición de correo
            $('#editEmailModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var modal = $(this);
                modal.find('#emailUserId').val(button.data('user-id'));
                modal.find('#emailInput').val(button.data('user-email'));
            });

            // Manejo del modal de edición de celular
            $('#editPhoneModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var modal = $(this);
                modal.find('#phoneUserId').val(button.data('user-id'));
                modal.find('#phoneInput').val(button.data('user-phone'));
            });

            // Validación del formulario de correo
            $('#editEmailForm').on('submit', function() {
                var email = $('#emailInput').val();
                if (!email) {
                    alert('Por favor ingrese un correo electrónico válido');
                    return false;
                }
                return true;
            });

            // Validación del formulario de celular
            $('#editPhoneForm').on('submit', function() {
                var phone = $('#phoneInput').val();
                if (!phone) {
                    alert('Por favor ingrese un número de celular válido');
                    return false;
                }
                return true;
            });

            // ========== NUEVO: Modal para Toggle de Rol ==========
            $('#toggleRoleModal').on('show.bs.modal', function (event) {
                const button = $(event.relatedTarget);
                const userId = button.data('user-id');
                const currentRole = button.data('current-role');
                const roleType = button.data('role-type'); // "Alumno"

                // Configurar campos ocultos
                $('#userId').val(userId);
                $('#rol').val(roleType);

                // Configurar contenido del modal según el estado actual
                const isActive = currentRole !== 'Inactivo';

                if (isActive) {
                    // Usuario está activo, se va a desactivar
                    $('#modalHeader').removeClass('bg-success').addClass('bg-warning text-dark');
                    $('#modalIcon').removeClass().addClass('fas fa-user-slash');
                    $('#modalTitle').text('Desactivar Usuario');
                    $('#modalMessage')
                        .removeClass('alert-success')
                        .addClass('alert-warning')
                        .html(`<strong>¿Desactivar usuario?</strong><br>
                               El usuario perderá el rol de "<strong>${roleType}</strong>" y su acceso al sistema será revocado.`);
                    $('#confirmButton')
                        .removeClass('btn-success')
                        .addClass('btn-warning')
                        .html('<i class="fas fa-user-slash me-2"></i>Desactivar');
                } else {
                    // Usuario está inactivo, se va a activar
                    $('#modalHeader').removeClass('bg-warning text-dark').addClass('bg-success text-white');
                    $('#modalIcon').removeClass().addClass('fas fa-user-check');
                    $('#modalTitle').text('Activar Usuario');
                    $('#modalMessage')
                        .removeClass('alert-warning')
                        .addClass('alert-success')
                        .html(`<strong>¿Activar usuario?</strong><br>
                               El usuario obtendrá el rol de "<strong>${roleType}</strong>" y tendrá acceso al sistema.`);
                    $('#confirmButton')
                        .removeClass('btn-warning')
                        .addClass('btn-success')
                        .html('<i class="fas fa-user-check me-2"></i>Activar');
                }
            });
        });
    </script>
}